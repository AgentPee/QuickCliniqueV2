@model QuickClinique.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - QuickClinic</title>
    <link rel="stylesheet" href="~/css/.css">
</head>
<body>
    <div class="container">
        <div class="side-panel">
            <div class="logo">
                <img src="~/img/logo.png" alt="QuickClinic Logo" class="logo-img">
            </div>
            <h1 class="clinic-name">QuickClinic</h1>
            <p class="tagline">Your Health, Our Priority</p>
            <div class="medical-icons">
                <div class="floating-icon">💊</div>
                <div class="floating-icon">🩺</div>
                <div class="floating-icon">❤️</div>
                <div class="floating-icon">🏥</div>
                <div class="floating-icon">🔬</div>
                <div class="floating-icon">🩹</div>
            </div>
        </div>

        <div class="form-panel">
            <div class="form-container">
                <h2 class="form-title">Forgot Password</h2>
                <p class="form-subtitle">Enter your email address and we'll send you a reset link</p>

                <form asp-action="ForgotPassword" method="post" class="auth-form">
                    <div asp-validation-summary="ModelOnly" class="error-message"></div>

                    <div class="input-group">
                        <label asp-for="Email" class="control-label">Email Address</label>
                        <input asp-for="Email" class="form-control" type="email" required placeholder="your.email@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <span class="input-icon">📧</span>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="submit-btn">
                            <span class="btn-text">Send Reset Link</span>
                            <span class="btn-loader"></span>
                        </button>
                        <a asp-action="Login" class="back-btn">Back to Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/js/StudForPas.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>