@model QuickClinique.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AuthLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QuickClinic - Forgot Password</title>
    <link rel="stylesheet" href="~/css/studForPas.css" />
</head>
<body>
    <div class="container">
        <div class="side-panel">
            <div class="logo">
                <img src="~/img/logo.png" alt="QuickClinic Logo" class="logo-img">
            </div>
            <h1 class="clinic-name">QuickClinic</h1>
            <p class="tagline">Your Health, Our Priority</p>
            <div class="medical-icons">
                <div class="floating-icon">💊</div>
                <div class="floating-icon">🩺</div>
                <div class="floating-icon">❤️</div>
                <div class="floating-icon">🏥</div>
                <div class="floating-icon">🔬</div>
                <div class="floating-icon">🩹</div>
            </div>
        </div>

        <div class="form-panel">
            <div class="form-container">
                <div class="form-wrapper active">
                    <h2 class="form-title">Reset Your Password</h2>
                    <p class="form-subtitle">Enter your email to receive a reset link</p>

                    <form asp-action="ForgotPassword" method="post" class="auth-form" id="forgotPasswordForm">
                        <div asp-validation-summary="ModelOnly" class="error-message"></div>

                        @if (ViewData["SuccessMessage"] != null)
                        {
                            <div class="success-message">
                                @ViewData["SuccessMessage"]
                            </div>
                        }

                        <div class="input-group">
                            <label asp-for="Email" class="control-label">Email Address</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Enter your registered email" required />
                            <span class="input-icon">📧</span>
                            <span asp-validation-for="Email" class="text-danger field-validation-error"></span>
                        </div>

                        <div class="form-options">
                            <a asp-action="Login" class="forgot-password">Back to Login</a>
                        </div>

                        <button type="submit" class="submit-btn">
                            <span class="btn-text">Send Reset Link</span>
                            <span class="btn-loader"></span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>