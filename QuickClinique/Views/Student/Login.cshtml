@model QuickClinique.Models.StudentLoginViewModel
@{
    ViewData["Title"] = "Student Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuickClinic</title>
    <link rel="stylesheet" href="~/css/studlogin.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="side-panel">
            <a asp-controller="ClinicStaff" asp-action="Login" class="logo" title="Switch to Staff Login">
                <img src="~/img/logo.png" alt="QuickClinic Logo" class="logo-img">
            </a>
            <h1 class="clinic-name">QuickClinic</h1>
            <p class="tagline">Your Health, Our Priority</p>
            <div class="medical-icons">
                <div class="floating-icon">💊</div>
                <div class="floating-icon">🩺</div>
                <div class="floating-icon">❤️</div>
                <div class="floating-icon">🏥</div>
                <div class="floating-icon">🔬</div>
                <div class="floating-icon">🩹</div>
            </div>
        </div>

        <div class="form-panel">
            <div class="form-container">
                <h2 class="form-title">Welcome Back</h2>
                <p class="form-subtitle">Sign in to access your account</p>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="success-message">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <form asp-action="Login" method="post" class="auth-form">
                    <div asp-validation-summary="ModelOnly" class="error-message"></div>

                    <div class="input-group">
                        <label asp-for="Idnumber" class="control-label">ID Number</label>
                        <input asp-for="Idnumber" class="form-control" maxlength="8" pattern="[0-9]{8}" required placeholder="Enter 8-digit ID" />
                        <span asp-validation-for="Idnumber" class="text-danger"></span>
                        <span class="input-icon">🆔</span>
                    </div>

                    <div class="input-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" type="password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <span class="toggle-password" onclick="togglePassword('Password')">👁️</span>
                    </div>

                    <div class="form-options">
                        <label class="checkbox-container">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <span class="checkmark"></span>
                            Remember me
                        </label>
                        <a asp-action="ForgotPassword" class="forgot-password">Forgot Password?</a>
                    </div>

                    <button type="submit" class="submit-btn">
                        <span class="btn-text">Sign In</span>
                        <span class="btn-loader"></span>
                    </button>
                </form>

                <div class="back-to-login">
                    <p>Don't have an account? <a asp-action="Register" class="back-link">Register here</a></p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/studlogin.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>