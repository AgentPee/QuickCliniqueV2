@model QuickClinique.Models.Student
@{
    ViewData["Title"] = "My Profile";
}


@section styles {
    <link rel="stylesheet" href="~/css/student-profile.css" />
}

<div class="profile-container">
    <div class="profile-header">
        <div class="profile-avatar">
            <i class="fas fa-user"></i>
        </div>
        <h1>@Model.FirstName @Model.LastName</h1>
        <p><i class="fas fa-id-card"></i> @Model.Idnumber</p>
    </div>

        <div class="info-card">
            <p>
                <i class="fas fa-info-circle"></i>
                <strong>Note:</strong> Your ID number cannot be changed. Contact the clinic staff if you need to update it.
            </p>
        </div>

        <form id="profileForm" asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="StudentId" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Idnumber" />
            <input type="hidden" asp-for="Password" />

            <!-- Personal Information -->
            <div class="form-section">
                <h3><i class="fas fa-user"></i> Personal Information</h3>

                <div class="form-group">
                    <label for="Idnumber">
                        <i class="fas fa-id-card"></i> ID Number
                    </label>
                    <input type="text" class="form-control" value="@Model.Idnumber" disabled />
                </div>

                <div class="form-group">
                    <label asp-for="FirstName">
                        <i class="fas fa-user"></i> First Name
                    </label>
                    <input asp-for="FirstName" class="form-control" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName">
                        <i class="fas fa-user"></i> Last Name
                    </label>
                    <input asp-for="LastName" class="form-control" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Birthdate">
                        <i class="fas fa-calendar"></i> Birthdate
                    </label>
                    <input asp-for="Birthdate" id="Birthdate" type="date" class="form-control" />
                    <span asp-validation-for="Birthdate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender">
                        <i class="fas fa-venus-mars"></i> Gender
                    </label>
                    <select asp-for="Gender" class="form-control">
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>
                        <i class="fas fa-birthday-cake"></i> Age
                    </label>
                    @{
                        string ageDisplay = "N/A";
                        if (Model.Birthdate.HasValue)
                        {
                            var today = DateOnly.FromDateTime(DateTime.Today);
                            var birthdate = Model.Birthdate.Value;
                            var age = today.Year - birthdate.Year;
                            if (birthdate > today.AddYears(-age)) age--;
                            ageDisplay = age.ToString() + " years old";
                        }
                    }
                    <input type="text" id="AgeDisplay" class="form-control" value="@ageDisplay" disabled />
                    
                </div>
            </div>

            <!-- Contact Information -->
            <div class="form-section">
                <h3><i class="fas fa-address-book"></i> Contact Information</h3>

                <div class="form-group">
                    <label asp-for="Email">
                        <i class="fas fa-envelope"></i> Email Address
                    </label>
                    <input asp-for="Email" type="email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber">
                        <i class="fas fa-phone"></i> Phone Number
                    </label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control" required />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <!-- Emergency Contact Information -->
            <div class="form-section">
                <h3><i class="fas fa-phone-alt"></i> Emergency Contact Information</h3>
                <p class="text-muted-custom">
                    Your emergency contact details are stored for safety purposes. Keep this information up to date.
                </p>

                <div class="form-group">
                    <label asp-for="EmergencyContactName">
                        <i class="fas fa-user"></i> Emergency Contact Name
                    </label>
                    <input asp-for="EmergencyContactName" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmergencyContactRelationship">
                        <i class="fas fa-users"></i> Relationship
                    </label>
                    <select asp-for="EmergencyContactRelationship" class="form-control">
                        <option value="">Select Relationship</option>
                        <option value="Parent">Parent</option>
                        <option value="Guardian">Guardian</option>
                        <option value="Sibling">Sibling</option>
                        <option value="Spouse">Spouse</option>
                        <option value="Relative">Relative</option>
                        <option value="Friend">Friend</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="EmergencyContactRelationship" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmergencyContactPhoneNumber">
                        <i class="fas fa-phone"></i> Emergency Contact Phone Number
                    </label>
                    <input asp-for="EmergencyContactPhoneNumber" class="form-control" 
                           placeholder="e.g., 09345672824"
                           pattern="09[0-9]{9}"
                           title="Phone number must start with 09 and be 11 digits" />
                    <small class="form-text text-muted">
                        Must start with 09 and be 11 digits total (e.g., 09345672824)
                    </small>
                    <span asp-validation-for="EmergencyContactPhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <!-- Insurance Receipt Upload -->
            <div class="form-section">
                <h3><i class="fas fa-file-invoice"></i> Insurance Receipt</h3>
                <p class="text-muted-custom">
                    Upload a clear image of your insurance receipt for verification purposes.
                </p>

                <div class="form-group">
                    <label for="InsuranceReceiptFile">
                        <i class="fas fa-upload"></i> Insurance Receipt Image
                    </label>
                    <div class="file-upload-container">
                        <input type="file" id="InsuranceReceiptFile" name="InsuranceReceiptFile" class="form-control file-input" accept="image/*" />
                        <div class="file-preview-container" id="insuranceReceiptPreview" style="@(string.IsNullOrEmpty(Model.InsuranceReceipt) ? "display:none;" : "")">
                            @if (!string.IsNullOrEmpty(Model.InsuranceReceipt))
                            {
                                <div class="current-file">
                                    <p><strong>Current Receipt:</strong></p>
                                    <img src="@Model.InsuranceReceipt" alt="Insurance Receipt" class="preview-image" />
                                    <a href="@Model.InsuranceReceipt" target="_blank" class="btn btn-sm btn-secondary mt-2">
                                        <i class="fas fa-external-link-alt"></i> View Full Size
                                    </a>
                                </div>
                            }
                            <div class="new-file-preview" id="newReceiptPreview" style="display:none;">
                                <p><strong>New Receipt Preview:</strong></p>
                                <img id="receiptPreviewImg" src="" alt="Preview" class="preview-image" />
                            </div>
                        </div>
                    </div>
                    <small class="form-text text-muted">
                        Accepted formats: JPG, PNG, GIF, BMP, WEBP. Maximum file size: 5MB.
                    </small>
                    <span class="text-danger" id="insuranceReceiptError"></span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="btn-group">
                <a href="@Url.Action("Dashboard", "Student")" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
                <a href="@Url.Action("EHR", "Student")" class="btn btn-primary btn-ehr-gradient">
                    <i class="fas fa-file-medical"></i> MY EHR
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </div>
        </form>

        <!-- Change Password Section -->
        <div class="form-section form-section-separator">
            <h3><i class="fas fa-lock"></i> Change Password</h3>
            <p class="text-muted-custom">
                Update your password to keep your account secure. Use a strong password with letters, numbers, and special characters.
            </p>

            <form id="changePasswordForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="StudentId" value="@Model.StudentId" />

                <div class="form-group">
                    <label for="CurrentPassword">
                        <i class="fas fa-key"></i> Current Password
                    </label>
                    <input type="password" id="CurrentPassword" name="CurrentPassword" class="form-control" required />
                    <span class="text-danger" id="currentPasswordError"></span>
                </div>

                <div class="form-group">
                    <label for="NewPassword">
                        <i class="fas fa-lock"></i> New Password
                    </label>
                    <input type="password" id="NewPassword" name="NewPassword" class="form-control" required minlength="6" />
                    <small class="form-text text-muted">
                        Password must be at least 6 characters and include uppercase, lowercase, number, and special character.
                    </small>
                    <span class="text-danger" id="newPasswordError"></span>
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword">
                        <i class="fas fa-lock"></i> Confirm New Password
                    </label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" required />
                    <span class="text-danger" id="confirmPasswordError"></span>
                </div>

                <div class="btn-group mt-1-5">
                    <button type="button" class="btn btn-secondary" onclick="resetPasswordForm()">
                        <i class="fas fa-undo"></i> Reset
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-key"></i> Change Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Calculate and update age when birthdate changes
            $('#Birthdate').on('change', function() {
                const birthdateValue = $(this).val();
                if (birthdateValue) {
                    const birthdate = new Date(birthdateValue);
                    if (!isNaN(birthdate.getTime())) {
                        const today = new Date();
                        let age = today.getFullYear() - birthdate.getFullYear();
                        const monthDiff = today.getMonth() - birthdate.getMonth();
                        if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthdate.getDate())) {
                            age--;
                        }
                        $('#AgeDisplay').val(age + ' years');
                    } else {
                        $('#AgeDisplay').val('N/A');
                    }
                } else {
                    $('#AgeDisplay').val('N/A');
                }
            });

            // Insurance receipt file preview
            $('#InsuranceReceiptFile').on('change', function(e) {
                const file = e.target.files[0];
                const errorSpan = $('#insuranceReceiptError');
                errorSpan.text('');

                if (file) {
                    // Validate file type
                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/bmp', 'image/webp'];
                    if (!allowedTypes.includes(file.type)) {
                        errorSpan.text('Invalid file type. Please upload an image file.');
                        $(this).val('');
                        return;
                    }

                    // Validate file size (5MB)
                    const maxSize = 5 * 1024 * 1024; // 5MB
                    if (file.size > maxSize) {
                        errorSpan.text('File size exceeds 5MB limit.');
                        $(this).val('');
                        return;
                    }

                    // Show preview
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#receiptPreviewImg').attr('src', e.target.result);
                        $('#newReceiptPreview').show();
                        $('#insuranceReceiptPreview').show();
                    };
                    reader.readAsDataURL(file);
                } else {
                    $('#newReceiptPreview').hide();
                }
            });

            // Profile form submission
            $('#profileForm').on('submit', function(e) {
                e.preventDefault();

                if (!$(this).valid()) {
                    return;
                }

                // Use FormData to handle file uploads
                const formData = new FormData(this);
                const errorSpan = $('#insuranceReceiptError');
                errorSpan.text('');

                // Validate file if selected
                const fileInput = $('#InsuranceReceiptFile')[0];
                if (fileInput.files.length > 0) {
                    const file = fileInput.files[0];
                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/bmp', 'image/webp'];
                    if (!allowedTypes.includes(file.type)) {
                        errorSpan.text('Invalid file type. Please upload an image file.');
                        return;
                    }

                    const maxSize = 5 * 1024 * 1024; // 5MB
                    if (file.size > maxSize) {
                        errorSpan.text('File size exceeds 5MB limit.');
                        return;
                    }
                }

                $.ajax({
                    url: '@Url.Action("UpdateProfile", "Student")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        if (response.success) {
                            showMessage('Profile updated successfully!', 'success');
                            setTimeout(function() {
                                window.location.href = '@Url.Action("Profile", "Student")';
                            }, 1500);
                        } else {
                            showMessage(response.error || 'Failed to update profile', 'error');
                        }
                    },
                    error: function() {
                        showMessage('An error occurred. Please try again.', 'error');
                    }
                });
            });

            // Change password form submission
            $('#changePasswordForm').on('submit', function(e) {
                e.preventDefault();

                // Clear previous errors
                $('.text-danger').text('');

                // Validate passwords match
                const newPassword = $('#NewPassword').val();
                const confirmPassword = $('#ConfirmPassword').val();

                if (newPassword !== confirmPassword) {
                    $('#confirmPasswordError').text('Passwords do not match');
                    return;
                }

                // Validate password strength
                const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@@$!%*?&])[A-Za-z\d@@$!%*?&]{6,}$/;
                if (!passwordRegex.test(newPassword)) {
                    $('#newPasswordError').text('Password must include uppercase, lowercase, number, and special character');
                    return;
                }

                const formData = $(this).serialize();

                $.ajax({
                    url: '@Url.Action("ChangePassword", "Student")',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        if (response.success) {
                            showMessage('Password changed successfully!', 'success');
                            resetPasswordForm();
                            setTimeout(function() {
                                window.location.href = '@Url.Action("Dashboard", "Student")';
                            }, 2000);
                        } else {
                            if (response.field) {
                                $('#' + response.field + 'Error').text(response.error);
                            } else {
                                showMessage(response.error || 'Failed to change password', 'error');
                            }
                        }
                    },
                    error: function() {
                        showMessage('An error occurred. Please try again.', 'error');
                    }
                });
            });

            // Real-time password match validation
            $('#ConfirmPassword').on('input', function() {
                const newPassword = $('#NewPassword').val();
                const confirmPassword = $(this).val();

                if (confirmPassword && newPassword !== confirmPassword) {
                    $('#confirmPasswordError').text('Passwords do not match');
                } else {
                    $('#confirmPasswordError').text('');
                }
            });
        });

        function resetPasswordForm() {
            $('#changePasswordForm')[0].reset();
            $('.text-danger').text('');
        }

        function showMessage(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 'alert-error';
            const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';

            $('#messageContainer').html(
                '<div class="alert ' + alertClass + '">' +
                    '<i class="fas ' + icon + '"></i>' +
                    '<span>' + message + '</span>' +
                '</div>'
            );

            // Scroll to top to show message
            $('html, body').animate({ scrollTop: 0 }, 300);
        }
    </script>
}

