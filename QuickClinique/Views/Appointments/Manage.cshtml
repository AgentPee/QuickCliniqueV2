@model IEnumerable<QuickClinique.Models.Appointment>
@{
    ViewData["Title"] = "Manage Appointments";
}

@section Styles {
    <link rel="stylesheet" href="~/css/appoMan.css" />
}

<div class="appointment-management">
    @Html.AntiForgeryToken()

    <!-- Enhanced Header -->
    <div class="management-header">
        <div class="header-content">
            <h2><i class="fas fa-calendar-check"></i> Appointment Management</h2>
            <p class="header-subtitle">Manage and track all patient appointments</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-primary" onclick="refreshAppointments()">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
            <a href="@Url.Action("Queue")" class="btn btn-success">
                <i class="fas fa-users"></i> Queue Management
            </a>
        </div>
    </div>

    <!-- Enhanced Statistics Cards -->
    <div class="stats-cards">
        <div class="stat-card stat-card-total">
            <div class="stat-icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number" id="totalAppointments">@Model.Count()</div>
                <div class="stat-label">Total Appointments</div>
            </div>
        </div>
        <div class="stat-card stat-card-pending">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number" id="pendingAppointments">@Model.Count(a => a.AppointmentStatus == "Pending")</div>
                <div class="stat-label">Pending</div>
            </div>
        </div>
        <div class="stat-card stat-card-confirmed">
            <div class="stat-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number" id="confirmedAppointments">@Model.Count(a => a.AppointmentStatus == "Confirmed")</div>
                <div class="stat-label">Confirmed</div>
            </div>
        </div>
        <div class="stat-card stat-card-today">
            <div class="stat-icon">
                <i class="fas fa-calendar-day"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number" id="todayAppointments">@Model.Count(a => a.Schedule.Date == DateOnly.FromDateTime(DateTime.Now))</div>
                <div class="stat-label">Today's Appointments</div>
            </div>
        </div>
    </div>

    <!-- Enhanced Filters -->
    <div class="filters">
        <div class="filter-header">
            <h5><i class="fas fa-filter"></i> Filter Appointments</h5>
        </div>
        <div class="filter-group">
            <div class="filter-item">
                <label for="statusFilter"><i class="fas fa-info-circle"></i> Status</label>
                <select id="statusFilter" class="form-control">
                    <option value="">All Statuses</option>
                    <option value="Pending">Pending</option>
                    <option value="Confirmed">Confirmed</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
            <div class="filter-item">
                <label for="dateFilter"><i class="fas fa-calendar"></i> Date</label>
                <input type="date" id="dateFilter" class="form-control">
            </div>
            <div class="filter-item">
                <label for="searchPatient"><i class="fas fa-search"></i> Search Patient</label>
                <input type="text" id="searchPatient" class="form-control" placeholder="Enter patient name...">
            </div>
            <div class="filter-item filter-actions">
                <button class="btn btn-secondary" onclick="clearFilters()">
                    <i class="fas fa-times-circle"></i> Clear
                </button>
            </div>
        </div>
    </div>

    <!-- Enhanced Appointments Table -->
    <div class="table-card">
        <div class="table-header">
            <h5><i class="fas fa-list"></i> Appointments List</h5>
            <span class="table-count" id="tableCount">Showing @Model.Count() appointments</span>
        </div>
        <div class="table-responsive">
            <table class="table table-hover" id="appointmentsTable">
                <thead>
                    <tr>
                        <th><i class="fas fa-user"></i> Patient</th>
                        <th><i class="fas fa-calendar"></i> Date & Time</th>
                        <th><i class="fas fa-info-circle"></i> Status</th>
                        <th><i class="fas fa-hashtag"></i> Queue</th>
                        <th><i class="fas fa-comment-medical"></i> Reason</th>
                        <th><i class="fas fa-notes-medical"></i> Symptoms</th>
                        <th><i class="fas fa-clock"></i> Date Booked</th>
                        <th><i class="fas fa-cog"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center">
                                <div class="no-appointments">
                                    <i class="fas fa-calendar-times"></i>
                                    <h5>No Appointments Found</h5>
                                    <p>There are no appointments to display at this time.</p>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr data-status="@item.AppointmentStatus" data-date="@item.Schedule.Date.ToString("yyyy-MM-dd")" data-patient="@item.Patient.FullName.ToLower()">
                                <td>
                                    <div class="patient-info">
                                        <i class="fas fa-user-circle patient-icon"></i>
                                        <span>@item.Patient.FullName</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="date-info">
                                        <div class="date-primary">@item.Schedule.Date.ToString("MMM dd, yyyy")</div>
                                        <div class="appointment-time">
                                            <i class="fas fa-clock"></i> @item.Schedule.StartTime.ToString("h:mm tt") - @item.Schedule.EndTime.ToString("h:mm tt")
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="status-badge status-@item.AppointmentStatus.ToLower().Replace(" ", "-")">
                                        @if (item.AppointmentStatus == "Pending")
                                        {
                                            <i class="fas fa-clock"></i>
                                        }
                                        else if (item.AppointmentStatus == "Confirmed")
                                        {
                                            <i class="fas fa-check"></i>
                                        }
                                        else if (item.AppointmentStatus == "In Progress")
                                        {
                                            <i class="fas fa-spinner"></i>
                                        }
                                        else if (item.AppointmentStatus == "Completed")
                                        {
                                            <i class="fas fa-check-circle"></i>
                                        }
                                        else if (item.AppointmentStatus == "Cancelled")
                                        {
                                            <i class="fas fa-times-circle"></i>
                                        }
                                        @item.AppointmentStatus
                                    </span>
                                </td>
                                <td>
                                    <div class="queue-info-cell">
                                        <span class="queue-badge">#@item.QueueNumber</span>
                                        <div class="queue-status">@item.QueueStatus</div>
                                    </div>
                                </td>
                                <td>
                                    <span class="reason-badge">@item.ReasonForVisit</span>
                                </td>
                                <td>
                                    <div class="symptoms-text" title="@item.Symptoms">
                                        @item.Symptoms
                                    </div>
                                </td>
                                <td>
                                    <div class="date-booked">
                                        @item.DateBooked.ToString("MMM dd, yyyy")
                                    </div>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        @if (item.AppointmentStatus == "Pending")
                                        {
                                            <button class="btn btn-success btn-sm" onclick="updateStatus(@item.AppointmentId, 'Confirmed')" title="Confirm Appointment">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        }
                                        @if (item.AppointmentStatus == "Confirmed")
                                        {
                                            <button class="btn btn-primary btn-sm" onclick="updateStatus(@item.AppointmentId, 'In Progress')" title="Start Appointment">
                                                <i class="fas fa-play"></i>
                                            </button>
                                        }
                                        @if (item.AppointmentStatus == "In Progress")
                                        {
                                            <button class="btn btn-success btn-sm" onclick="completeAppointment(@item.AppointmentId, @item.PatientId)" title="Complete Appointment">
                                                <i class="fas fa-check-circle"></i>
                                            </button>
                                        }
                                        @if (item.AppointmentStatus != "Completed" && item.AppointmentStatus != "Cancelled")
                                        {
                                            <button class="btn btn-warning btn-sm" onclick="updateStatus(@item.AppointmentId, 'Cancelled')" title="Cancel Appointment">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        }
                                        <a href="@Url.Action("Details", new { id = item.AppointmentId })" class="btn btn-info btn-sm" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Enhanced Complete Appointment Modal -->
<div class="modal fade" id="completeAppointmentModal" tabindex="-1" role="dialog" aria-labelledby="completeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="completeModalLabel">
                    <i class="fas fa-check-circle"></i> Complete Appointment & Create Medical Record
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="completeAppointmentForm">
                    <input type="hidden" id="completeAppointmentId" name="appointmentId">
                    <input type="hidden" id="completePatientId" name="patientId">

                    <div class="alert alert-info alert-custom">
                        <i class="fas fa-info-circle"></i>
                        <div>
                            <strong>Important:</strong> Completing this appointment will automatically create a medical record for the patient with the information provided below.
                        </div>
                    </div>

                    <!-- Diagnosis Section -->
                    <div class="form-section">
                        <h6 class="section-title"><i class="fas fa-stethoscope"></i> Diagnosis</h6>
                        <div class="form-group">
                            <label for="diagnosis">
                                Primary Diagnosis <span class="text-danger">*</span>
                            </label>
                            <textarea class="form-control" id="diagnosis" name="diagnosis" rows="3" required
                                      placeholder="Enter the primary diagnosis and findings..."></textarea>
                            <small class="form-text text-muted">Provide a detailed description of the patient's condition</small>
                        </div>
                    </div>

                    <!-- Treatment Section -->
                    <div class="form-section">
                        <h6 class="section-title"><i class="fas fa-pills"></i> Treatment & Medications</h6>
                        <div class="form-group">
                            <label for="medications">Medications Prescribed</label>
                            <textarea class="form-control" id="medications" name="medications" rows="3"
                                      placeholder="List all medications with dosage and frequency..."></textarea>
                            <small class="form-text text-muted">Example: Amoxicillin 500mg, 3 times daily for 7 days</small>
                        </div>
                    </div>

                    <!-- Patient Information Section -->
                    <div class="form-section">
                        <h6 class="section-title"><i class="fas fa-user-md"></i> Patient Information</h6>
                        <div class="form-group">
                            <label for="allergies">
                                <i class="fas fa-exclamation-triangle"></i> Known Allergies
                            </label>
                            <input type="text" class="form-control" id="allergies" name="allergies"
                                   placeholder="List any known allergies (e.g., Penicillin, Peanuts)">
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="patientAge">
                                        <i class="fas fa-birthday-cake"></i> Age
                                    </label>
                                    <input type="number" class="form-control" id="patientAge" name="age"
                                           placeholder="Age" min="1" max="120">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="patientGender">
                                        <i class="fas fa-venus-mars"></i> Gender
                                    </label>
                                    <select class="form-control" id="patientGender" name="gender">
                                        <option value="">Select Gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="patientBMI">
                                        <i class="fas fa-weight"></i> BMI
                                    </label>
                                    <input type="number" class="form-control" id="patientBMI" name="bmi"
                                           placeholder="Body Mass Index" step="0.1" min="10" max="50">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Notes Section -->
                    <div class="form-section">
                        <h6 class="section-title"><i class="fas fa-notes-medical"></i> Additional Notes</h6>
                        <div class="form-group">
                            <label for="additionalNotes">Clinical Observations & Follow-up Notes</label>
                            <textarea class="form-control" id="additionalNotes" name="additionalNotes" rows="3"
                                      placeholder="Any additional observations, recommendations, or follow-up instructions..."></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" class="btn btn-success" onclick="submitCompleteAppointment()">
                    <i class="fas fa-check-circle"></i> Complete & Save Record
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/appoMan.js"></script>
}