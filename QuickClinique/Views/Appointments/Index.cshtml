@model IEnumerable<QuickClinique.Models.Appointment>
@{
    ViewData["Title"] = "Appointments";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/appoIndex.css" asp-append-version="true" />
}

<div class="appointments-container">
    <div class="content-card">
        <!-- Enhanced Page Header -->
        <div class="page-header">
            <div class="header-content">
                <div class="header-title">
                    <div class="header-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="header-text">
                        <h2>Appointments</h2>
                        <p class="header-subtitle">View and manage all appointment records</p>
                    </div>
                </div>
                <div class="header-actions">
                    @if (Context.Session.GetInt32("ClinicStaffId") != null)
                    {
                        <a asp-action="Manage" class="btn btn-primary">
                            <i class="fas fa-cogs"></i>
                            <span>Manage</span>
                        </a>
                        <a asp-action="Queue" class="btn btn-success">
                            <i class="fas fa-users"></i>
                            <span>Queue</span>
                        </a>
                    }
                    <a asp-action="Create" class="btn btn-create">
                        <i class="fas fa-plus-circle"></i>
                        <span>New Appointment</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Statistics Summary (if appointments exist) -->
        @if (Model.Any())
        {
            <div class="stats-summary">
                <div class="stat-item">
                    <div class="stat-icon stat-icon-total">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="stat-details">
                        <div class="stat-value">@Model.Count()</div>
                        <div class="stat-label">Total</div>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon stat-icon-pending">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-details">
                        <div class="stat-value">@Model.Count(a => a.AppointmentStatus == "Pending")</div>
                        <div class="stat-label">Pending</div>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon stat-icon-confirmed">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-details">
                        <div class="stat-value">@Model.Count(a => a.AppointmentStatus == "Confirmed")</div>
                        <div class="stat-label">Confirmed</div>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon stat-icon-completed">
                        <i class="fas fa-check-double"></i>
                    </div>
                    <div class="stat-details">
                        <div class="stat-value">@Model.Count(a => a.AppointmentStatus == "Completed")</div>
                        <div class="stat-label">Completed</div>
                    </div>
                </div>
            </div>
        }

        <!-- Table Container -->
        <div class="table-container">
            @if (Model.Any())
            {
                <div class="table-header">
                    <h5><i class="fas fa-list-ul"></i> All Appointments</h5>
                    <span class="record-count">Showing @Model.Count() record(s)</span>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th><i class="fas fa-user"></i> Patient</th>
                                <th><i class="fas fa-calendar-day"></i> Date & Time</th>
                                <th><i class="fas fa-info-circle"></i> Status</th>
                                <th><i class="fas fa-hashtag"></i> Queue</th>
                                <th><i class="fas fa-comment-medical"></i> Reason</th>
                                <th><i class="fas fa-notes-medical"></i> Symptoms</th>
                                <th><i class="fas fa-clock"></i> Booked</th>
                                <th><i class="fas fa-cog"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="patient-info">
                                            <i class="fas fa-user-circle patient-icon"></i>
                                            <span class="patient-name">@item.Patient?.FullName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="datetime-info">
                                            <div class="date-primary">
                                                <i class="fas fa-calendar"></i>
                                                @item.Schedule?.Date.ToString("MMM dd, yyyy")
                                            </div>
                                            <div class="appointment-time">
                                                <i class="fas fa-clock"></i>
                                                @item.Schedule?.StartTime.ToString("h:mm tt") - @item.Schedule?.EndTime.ToString("h:mm tt")
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="status-badge status-@item.AppointmentStatus.ToLower().Replace(" ", "-")">
                                            @if (item.AppointmentStatus == "Pending")
                                            {
                                                <i class="fas fa-hourglass-half"></i>
                                            }
                                            else if (item.AppointmentStatus == "Confirmed")
                                            {
                                                <i class="fas fa-check"></i>
                                            }
                                            else if (item.AppointmentStatus == "In Progress")
                                            {
                                                <i class="fas fa-spinner"></i>
                                            }
                                            else if (item.AppointmentStatus == "Completed")
                                            {
                                                <i class="fas fa-check-circle"></i>
                                            }
                                            else if (item.AppointmentStatus == "Cancelled")
                                            {
                                                <i class="fas fa-times-circle"></i>
                                            }
                                            <span>@item.AppointmentStatus</span>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="queue-info">
                                            <span class="queue-badge">
                                                <i class="fas fa-hashtag"></i>@item.QueueNumber
                                            </span>
                                            <span class="queue-status">@item.QueueStatus</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="reason-tag">@item.ReasonForVisit</span>
                                    </td>
                                    <td>
                                        <div class="symptoms-text" title="@item.Symptoms">
                                            @item.Symptoms
                                        </div>
                                    </td>
                                    <td>
                                        <div class="date-booked">
                                            @item.DateBooked.ToString("MMM dd, yyyy")
                                        </div>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a asp-action="Details" asp-route-id="@item.AppointmentId"
                                               class="btn btn-info btn-sm"
                                               title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (Context.Session.GetInt32("ClinicStaffId") != null)
                                            {
                                                @if (item.AppointmentStatus == "Pending")
                                                {
                                                    <button type="button"
                                                            class="btn btn-success btn-sm"
                                                            onclick="confirmAppointment(@item.AppointmentId)"
                                                            title="Confirm Appointment">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                }
                                                @if (item.AppointmentStatus != "Cancelled" && item.AppointmentStatus != "Completed")
                                                {
                                                    <button type="button"
                                                            class="btn btn-danger btn-sm"
                                                            onclick="cancelAppointment(@item.AppointmentId)"
                                                            title="Cancel Appointment">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="no-appointments">
                    <div class="empty-icon">
                        <i class="fas fa-calendar-times"></i>
                    </div>
                    <h4>No Appointments Yet</h4>
                    <p>There are no appointments in the system. Create your first appointment to get started.</p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus-circle"></i>
                        <span>Create First Appointment</span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/appoIndex.js"></script>
    @Html.AntiForgeryToken()
}