@section Scripts {
    <script src="~/js/appoQ.js"></script>
    @Html.AntiForgeryToken()
    <script>
        // BMI Calculation for Next Patient Modal
        document.addEventListener('DOMContentLoaded', function() {
            const calculateBtn = document.getElementById('calculateTriageBMI');
            if (calculateBtn) {
                calculateBtn.addEventListener('click', calculateTriageBMI);
            }
            
            // Also calculate on Enter key in height/weight fields
            const heightInput = document.getElementById('triageHeight');
            const weightInput = document.getElementById('triageWeight');
            
            if (heightInput) {
                heightInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        calculateTriageBMI();
                    }
                });
            }
            
            if (weightInput) {
                weightInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        calculateTriageBMI();
                    }
                });
            }
        });

        function calculateTriageBMI() {
            const height = parseFloat(document.getElementById('triageHeight')?.value);
            const weight = parseFloat(document.getElementById('triageWeight')?.value);
            const bmiInput = document.getElementById('triageBMI');
            const bmiResult = document.getElementById('bmiResultModal');
            const bmiValue = document.getElementById('bmiValueModal');
            const bmiCategory = document.getElementById('bmiCategoryModal');

            // Validate inputs
            if (!height || height < 100 || height > 250) {
                alert('Please enter a valid height between 100 and 250 cm');
                return;
            }

            if (!weight || weight < 30 || weight > 200) {
                alert('Please enter a valid weight between 30 and 200 kg');
                return;
            }

            // Calculate BMI: weight (kg) / (height (m))^2
            const heightInMeters = height / 100;
            const bmi = weight / (heightInMeters * heightInMeters);
            const roundedBMI = Math.round(bmi * 10) / 10;

            // Update BMI input field
            if (bmiInput) {
                bmiInput.value = roundedBMI;
            }

            // Determine category
            let category = '';
            let description = '';
            let categoryClass = '';

            if (bmi < 18.5) {
                category = 'Underweight';
                description = 'BMI below 18.5';
                categoryClass = 'underweight';
            } else if (bmi < 25) {
                category = 'Normal';
                description = 'Healthy weight range';
                categoryClass = 'normal';
            } else if (bmi < 30) {
                category = 'Overweight';
                description = 'BMI between 25-30';
                categoryClass = 'overweight';
            } else {
                category = 'Obese';
                description = 'BMI 30 or above';
                categoryClass = 'obese';
            }

            // Update result display
            if (bmiValue) {
                bmiValue.textContent = roundedBMI;
            }
            if (bmiCategory) {
                bmiCategory.textContent = category;
                bmiCategory.className = 'bmi-result-category-modal ' + categoryClass;
            }
            if (bmiResult) {
                bmiResult.style.display = 'block';
            }
        }

        // Pulse Rate Indicator
        function updatePulseRateIndicator() {
            const pulseRate = parseInt(document.getElementById('triagePulseRate')?.value);
            const resultModal = document.getElementById('pulseRateResultModal');
            const valueModal = document.getElementById('pulseRateValueModal');
            const categoryModal = document.getElementById('pulseRateCategoryModal');

            if (!pulseRate || pulseRate < 30 || pulseRate > 200) {
                if (resultModal) resultModal.classList.add('vital-result-modal-hidden');
                return;
            }
            
            // Remove hidden class to show the modal
            if (resultModal) resultModal.classList.remove('vital-result-modal-hidden');

            let category = '';
            let categoryClass = '';
            let emoji = '';

            if (pulseRate < 60) {
                category = 'Bradycardia';
                categoryClass = 'abnormal';
                emoji = 'âš ï¸';
            } else if (pulseRate <= 100) {
                category = 'Normal';
                categoryClass = 'normal';
                emoji = 'âœ…';
            } else {
                category = 'Tachycardia';
                categoryClass = 'abnormal';
                emoji = 'âš ï¸';
            }

            if (valueModal) valueModal.textContent = pulseRate + ' bpm';
            if (categoryModal) {
                categoryModal.textContent = emoji + ' ' + category;
                categoryModal.className = 'vital-result-category-modal ' + categoryClass;
            }
        }

        // Blood Pressure Indicator
        function updateBPIndicator() {
            const systolic = parseInt(document.getElementById('triageBPSystolic')?.value);
            const diastolic = parseInt(document.getElementById('triageBPDiastolic')?.value);
            const bpInput = document.getElementById('triageBloodPressure');
            const resultModal = document.getElementById('bpResultModal');
            const valueModal = document.getElementById('bpValueModal');
            const categoryModal = document.getElementById('bpCategoryModal');

            // Update hidden field
            if (bpInput && systolic && diastolic) {
                bpInput.value = systolic + '/' + diastolic;
            }

            if (!systolic || !diastolic || systolic < 70 || systolic > 250 || diastolic < 40 || diastolic > 150) {
                if (resultModal) resultModal.classList.add('vital-result-modal-hidden');
                return;
            }
            
            // Remove hidden class to show the modal
            if (resultModal) resultModal.classList.remove('vital-result-modal-hidden');

            let category = '';
            let categoryClass = '';
            let emoji = '';

            if (systolic < 120 && diastolic < 80) {
                category = 'Normal';
                categoryClass = 'normal';
                emoji = 'âœ…';
            } else if (systolic < 130 && diastolic < 80) {
                category = 'Elevated';
                categoryClass = 'warning';
                emoji = 'âš ï¸';
            } else if (systolic < 140 || diastolic < 90) {
                category = 'High Stage 1';
                categoryClass = 'abnormal';
                emoji = 'âš ï¸';
            } else if (systolic < 180 || diastolic < 120) {
                category = 'High Stage 2';
                categoryClass = 'abnormal';
                emoji = 'ðŸ”´';
            } else {
                category = 'Hypertensive Crisis';
                categoryClass = 'critical';
                emoji = 'ðŸ”´';
            }

            if (valueModal) valueModal.textContent = systolic + '/' + diastolic;
            if (categoryModal) {
                categoryModal.textContent = emoji + ' ' + category;
                categoryModal.className = 'vital-result-category-modal ' + categoryClass;
            }
        }

        // Temperature Indicator
        function updateTemperatureIndicator() {
            const temperature = parseFloat(document.getElementById('triageTemperature')?.value);
            const resultModal = document.getElementById('temperatureResultModal');
            const valueModal = document.getElementById('temperatureValueModal');
            const categoryModal = document.getElementById('temperatureCategoryModal');

            if (!temperature || temperature < 30 || temperature > 45) {
                if (resultModal) resultModal.classList.add('vital-result-modal-hidden');
                return;
            }
            
            // Remove hidden class to show the modal
            if (resultModal) resultModal.classList.remove('vital-result-modal-hidden');

            let category = '';
            let categoryClass = '';
            let emoji = '';

            if (temperature < 35) {
                category = 'Hypothermia';
                categoryClass = 'critical';
                emoji = 'ðŸ”´';
            } else if (temperature < 36.1) {
                category = 'Low';
                categoryClass = 'warning';
                emoji = 'âš ï¸';
            } else if (temperature <= 37.2) {
                category = 'Normal';
                categoryClass = 'normal';
                emoji = 'âœ…';
            } else if (temperature <= 38.3) {
                category = 'Low-grade Fever';
                categoryClass = 'warning';
                emoji = 'âš ï¸';
            } else if (temperature <= 39.4) {
                category = 'Fever';
                categoryClass = 'abnormal';
                emoji = 'ðŸ”´';
            } else {
                category = 'High Fever';
                categoryClass = 'critical';
                emoji = 'ðŸ”´';
            }

            if (valueModal) valueModal.textContent = temperature.toFixed(1) + 'Â°C';
            if (categoryModal) {
                categoryModal.textContent = emoji + ' ' + category;
                categoryModal.className = 'vital-result-category-modal ' + categoryClass;
            }
        }

        // Oxygen Saturation Indicator
        function updateOxygenSaturationIndicator() {
            const oxygenSat = parseInt(document.getElementById('triageOxygenSaturation')?.value);
            const resultModal = document.getElementById('oxygenSaturationResultModal');
            const valueModal = document.getElementById('oxygenSaturationValueModal');
            const categoryModal = document.getElementById('oxygenSaturationCategoryModal');

            if (!oxygenSat || oxygenSat < 70 || oxygenSat > 100) {
                if (resultModal) resultModal.classList.add('vital-result-modal-hidden');
                return;
            }
            
            // Remove hidden class to show the modal
            if (resultModal) resultModal.classList.remove('vital-result-modal-hidden');

            let category = '';
            let categoryClass = '';
            let emoji = '';

            if (oxygenSat >= 95) {
                category = 'Normal';
                categoryClass = 'normal';
                emoji = 'âœ…';
            } else if (oxygenSat >= 90) {
                category = 'Mild Hypoxemia';
                categoryClass = 'warning';
                emoji = 'âš ï¸';
            } else if (oxygenSat >= 85) {
                category = 'Moderate Hypoxemia';
                categoryClass = 'abnormal';
                emoji = 'ðŸ”´';
            } else {
                category = 'Severe Hypoxemia';
                categoryClass = 'critical';
                emoji = 'ðŸ”´';
            }

            if (valueModal) valueModal.textContent = oxygenSat + '%';
            if (categoryModal) {
                categoryModal.textContent = emoji + ' ' + category;
                categoryModal.className = 'vital-result-category-modal ' + categoryClass;
            }
        }

        // ===== EMERGENCY SOS FUNCTIONALITY =====
        let currentEmergencyId = null;
        let emergencyCheckInterval = null;
        let lastCheckedEmergencyId = null;

        // Check for emergencies every 5 seconds
        function startEmergencyCheck() {
            if (emergencyCheckInterval) {
                clearInterval(emergencyCheckInterval);
            }

            emergencyCheckInterval = setInterval(async () => {
                await checkForEmergencies();
            }, 5000); // Check every 5 seconds

            // Check immediately on page load
            checkForEmergencies();
        }

        // Check for active emergencies
        async function checkForEmergencies() {
            try {
                const response = await fetch('/Dashboard/GetActiveEmergencies');
                const result = await response.json();

                if (result.success && result.data && result.data.length > 0) {
                    // Get the most recent emergency
                    const latestEmergency = result.data[0];
                    
                    // Only show modal if it's a new emergency (different ID)
                    if (latestEmergency.emergencyId !== lastCheckedEmergencyId) {
                        lastCheckedEmergencyId = latestEmergency.emergencyId;
                        currentEmergencyId = latestEmergency.emergencyId;
                        showEmergencyModal(latestEmergency);
                    }
                }
            } catch (error) {
                console.error('Error checking for emergencies:', error);
            }
        }

        // Show emergency modal
        function showEmergencyModal(emergency) {
            document.getElementById('emergencyStudentName').textContent = emergency.studentName;
            document.getElementById('emergencyStudentId').textContent = emergency.studentIdNumber;
            document.getElementById('emergencyLocation').textContent = emergency.location;
            document.getElementById('emergencyNeeds').textContent = emergency.needs;
            
            const createdAt = new Date(emergency.createdAt);
            document.getElementById('emergencyTime').textContent = createdAt.toLocaleString('en-US', {
                month: 'short',
                day: 'numeric',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });

            // Show modal with sound alert (if browser allows)
            const modal = new bootstrap.Modal(document.getElementById('emergencyModal'));
            modal.show();

            // Play alert sound (if available)
            try {
                const audio = new Audio('data:audio/wav;base64,UklGRnoGAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQoGAACBhYqFbF1fdJivrJBhNjVgodDbq2EcBj+a2/LDciUFLIHO8tiJNwgZaLvt559NEAxQp+PwtmMcBjiR1/LMeSwFJHfH8N2QQQ');
                audio.play().catch(() => {}); // Ignore if autoplay is blocked
            } catch (e) {}

            // Flash the browser tab title
            let flashCount = 0;
            const originalTitle = document.title;
            const flashInterval = setInterval(() => {
                document.title = flashCount % 2 === 0 ? 'ðŸš¨ EMERGENCY SOS ðŸš¨' : originalTitle;
                flashCount++;
                if (flashCount > 10) {
                    clearInterval(flashInterval);
                    document.title = originalTitle;
                }
            }, 500);
        }

        // Mark emergency as resolved
        document.addEventListener('DOMContentLoaded', function() {
            const resolveBtn = document.getElementById('resolveEmergencyBtn');
            if (resolveBtn) {
                resolveBtn.addEventListener('click', async function() {
                    if (!currentEmergencyId) {
                        return;
                    }

                    const btn = this;
                    btn.disabled = true;
                    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Resolving...';

                    try {
                        const response = await fetch('/Dashboard/MarkEmergencyResolved', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            },
                            body: JSON.stringify({ emergencyId: currentEmergencyId })
                        });

                        const result = await response.json();

                        if (result.success) {
                            const modal = bootstrap.Modal.getInstance(document.getElementById('emergencyModal'));
                            modal.hide();
                            alert('Emergency marked as resolved');
                            currentEmergencyId = null;
                        } else {
                            alert('Failed to resolve emergency: ' + (result.error || 'Unknown error'));
                        }
                    } catch (error) {
                        console.error('Error resolving emergency:', error);
                        alert('Error resolving emergency. Please try again.');
                    } finally {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-check"></i> Mark as Resolved';
                    }
                });
            }

            // Start emergency check when page loads
            startEmergencyCheck();
        });
    </script>
