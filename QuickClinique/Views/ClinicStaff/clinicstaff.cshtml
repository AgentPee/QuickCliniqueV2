@model QuickClinique.Models.Clinicstaff

@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/clinicstaff.css" asp-append-version="true" />
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h1 class="dashboard-title">Staff Dashboard</h1>
    <div class="dashboard-stats">
        <div class="stat-card">
            <div class="stat-value">12</div>
            <div class="stat-label">Pending Appointments</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">28</div>
            <div class="stat-label">Today's Patients</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">5</div>
            <div class="stat-label">Unread Messages</div>
        </div>
    </div>
</div>

<!-- Dashboard Grid -->
<div class="dashboard-grid">
    <!-- Booking Approval Section -->
    <div class="section-card">
        <div class="section-header">
            <i class="fas fa-calendar-check"></i>
            <h2>Booking Approval</h2>
        </div>
        <div class="search-box">
            <input type="text" id="booking-search" placeholder="Search appointments...">
            <button><i class="fas fa-search"></i></button>
        </div>
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Patient</th>
                    <th>Date & Time</th>
                    <th>Service</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="bookings-table">
                <!-- Bookings will be populated by JavaScript -->
            </tbody>
        </table>
    </div>

    <!-- Patient Records Section -->
    <div class="section-card">
        <div class="section-header">
            <i class="fas fa-users"></i>
            <h2>Patient Records</h2>
        </div>
        <div class="search-box">
            <input type="text" id="patient-search" placeholder="Search patients...">
            <button><i class="fas fa-search"></i></button>
        </div>
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Last Visit</th>
                    <th>BMI</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="patients-table">
                <!-- Patients will be populated by JavaScript -->
            </tbody>
        </table>
    </div>

    <!-- BMI Calculator Section -->
    <div class="section-card">
        <div class="section-header">
            <i class="fas fa-weight"></i>
            <h2>BMI Calculator</h2>
        </div>
        <div class="bmi-calculator">
            <div class="form-group">
                <label for="patient-select">Select Patient</label>
                <select id="patient-select">
                    <option value="">-- Select Patient --</option>
                    <!-- Patients will be populated by JavaScript -->
                </select>
            </div>
            <div class="form-group">
                <label for="height">Height (cm)</label>
                <input type="number" id="height" placeholder="Enter height in cm">
            </div>
            <div class="form-group">
                <label for="weight">Weight (kg)</label>
                <input type="number" id="weight" placeholder="Enter weight in kg">
            </div>
            <button class="btn btn-primary" id="calculate-bmi">
                <i class="fas fa-calculator"></i> Calculate BMI
            </button>
            <div id="bmi-result" class="bmi-result" style="display: none;">
                <!-- BMI result will be shown here -->
            </div>
        </div>

        <!-- BMI Meter -->
        <div class="bmi-meter-container">
            <h3>BMI Meter</h3>
            <div class="bmi-meter">
                <div class="bmi-indicator" id="bmi-indicator"></div>
            </div>
            <div class="bmi-meter-labels">
                <span>15</span>
                <span>18.5</span>
                <span>25</span>
                <span>30</span>
                <span>40</span>
            </div>
            <div class="bmi-categories">
                <div class="bmi-category underweight">Underweight</div>
                <div class="bmi-category normal">Normal</div>
                <div class="bmi-category overweight">Overweight</div>
                <div class="bmi-category obese">Obese</div>
            </div>
        </div>
    </div>

    <!-- Messaging Section -->
    <div class="section-card">
        <div class="section-header">
            <i class="fas fa-comments"></i>
            <h2>Patient Messaging</h2>
        </div>
        <div class="form-group">
            <label for="message-patient">Select Patient to Message</label>
            <select id="message-patient">
                <option value="">-- Select Patient --</option>
                <!-- Patients will be populated by JavaScript -->
            </select>
        </div>
        <div class="message-container">
            <div class="message-header">
                Messages
            </div>
            <div class="message-list" id="message-list">
                <!-- Messages will be populated by JavaScript -->
            </div>
            <div class="message-input">
                <input type="text" id="new-message" placeholder="Type your message...">
                <button class="btn btn-primary btn-sm" id="send-message">
                    <i class="fas fa-paper-plane"></i> Send
                </button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/dashboard-data.js"></script>
    <script src="~/js/dashboard.js"></script>
}