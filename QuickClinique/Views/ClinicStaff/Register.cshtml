@model QuickClinique.Models.ClinicStaffRegisterViewModel
@{
    ViewData["Title"] = "Clinic Staff Registration";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clinic Staff Registration - QuickClinic</title>
    <link rel="icon" type="image/png" href="~/img/logo.png" />
    <link rel="stylesheet" href="~/css/staffReg.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="side-panel">
            <div class="logo">
                <img src="~/img/logo.png" alt="QuickClinic Logo" class="logo-img">
            </div>
            <h1 class="clinic-name">QuickClinique</h1>
            <p class="tagline">Staff Portal - Professional Healthcare</p>
            <div class="medical-icons">
                <div class="floating-icon">💊</div>
                <div class="floating-icon">🩺</div>
                <div class="floating-icon">❤️</div>
                <div class="floating-icon">🏥</div>
                <div class="floating-icon">🔬</div>
                <div class="floating-icon">🩹</div>
            </div>
        </div>

        <div class="form-panel">
            <div class="form-container">
                <h2 class="form-title">Staff Registration</h2>
                <p class="form-subtitle">Join QuickClinique as staff member</p>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="success-message">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <form asp-action="Register" method="post" enctype="multipart/form-data" class="auth-form">
                    <div asp-validation-summary="ModelOnly" class="error-message"></div>

                    <div class="form-row">
                        <div class="input-group">
                            <label asp-for="FirstName" class="control-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" required />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                            <span class="input-icon">👤</span>
                        </div>

                        <div class="input-group">
                            <label asp-for="LastName" class="control-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                            <span class="input-icon">👤</span>
                        </div>
                    </div>

                    <div class="input-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" required placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <span class="input-icon">📧</span>
                    </div>

                    <div class="input-group">
                        <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control"
                               placeholder="e.g., 09345672824"
                               pattern="09[0-9]{9}"
                               title="Phone number must start with 09 and be 11 digits"
                               required />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <span class="input-icon">📱</span>
                        <small class="input-hint">Must start with 09 and be 11 digits total</small>
                    </div>

                    <div class="form-row">
                        <div class="input-group">
                            <label asp-for="Gender" class="control-label">Gender</label>
                            <select asp-for="Gender" class="form-control" required>
                                <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                            <span class="input-icon">⚧️</span>
                        </div>

                        <div class="input-group">
                            <label asp-for="Birthdate" class="control-label">Birthdate</label>
                            <input asp-for="Birthdate" class="form-control" type="date" required />
                            <span asp-validation-for="Birthdate" class="text-danger"></span>
                            <span class="input-icon">📅</span>
                        </div>
                    </div>

                    <div class="input-group">
                        <label class="control-label">Staff ID Image (Front)</label>
                        <div class="file-input-container">
                            <input asp-for="StaffIdImageFront" id="StaffIdImageFront" class="form-control file-input" type="file" accept="image/*" capture="environment" required style="display: none;" />
                            <div class="file-input-buttons">
                                <button type="button" class="btn-upload" onclick="document.getElementById('StaffIdImageFront').click()">
                                    📤 Upload File
                                </button>
                                <button type="button" class="btn-camera" onclick="openCamera('StaffIdImageFront')">
                                    📷 Take Photo
                                </button>
                            </div>
                            <div id="preview-front" class="image-preview"></div>
                            <span asp-validation-for="StaffIdImageFront" class="text-danger"></span>
                        </div>
                        <small class="input-hint">Upload or take a photo of the front of your staff ID</small>
                    </div>

                    <div class="input-group">
                        <label class="control-label">Staff ID Image (Back)</label>
                        <div class="file-input-container">
                            <input asp-for="StaffIdImageBack" id="StaffIdImageBack" class="form-control file-input" type="file" accept="image/*" capture="environment" required style="display: none;" />
                            <div class="file-input-buttons">
                                <button type="button" class="btn-upload" onclick="document.getElementById('StaffIdImageBack').click()">
                                    📤 Upload File
                                </button>
                                <button type="button" class="btn-camera" onclick="openCamera('StaffIdImageBack')">
                                    📷 Take Photo
                                </button>
                            </div>
                            <div id="preview-back" class="image-preview"></div>
                            <span asp-validation-for="StaffIdImageBack" class="text-danger"></span>
                        </div>
                        <small class="input-hint">Upload or take a photo of the back of your staff ID</small>
                    </div>

                    <div class="input-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" id="Password" class="form-control" type="password" required />
                        <span class="toggle-password" onclick="togglePassword('Password')">👁️</span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="input-group">
                        <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" id="ConfirmPassword" class="form-control" type="password" required />
                        <span class="toggle-password" onclick="togglePassword('ConfirmPassword')">👁️</span>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="submit-btn">
                        <span class="btn-text">Register</span>
                        <span class="btn-loader"></span>
                    </button>
                </form>

                <div class="back-to-login">
                    <p>Already have an account? <a asp-action="Login" class="back-link">Login here</a></p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/auth.js"></script>
    <script src="~/js/studReg.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>