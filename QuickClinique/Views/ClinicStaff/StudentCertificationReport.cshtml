@model QuickClinique.Models.Student
@{
    ViewData["Title"] = "Student Certification Report";
    Layout = null; // Remove layout for printing
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Student Certification Report - @Model.FirstName @Model.LastName</title>
    <link rel="stylesheet" href="~/css/reports-print.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            color: #333;
        }
        .report-header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 3px solid #4ECDC4;
            padding-bottom: 20px;
        }
        .report-header h1 {
            color: #4ECDC4;
            margin: 0;
            font-size: 28px;
        }
        .report-header h2 {
            color: #666;
            margin: 10px 0;
            font-size: 20px;
            font-weight: normal;
        }
        .certificate-body {
            margin: 40px 0;
            line-height: 1.8;
            font-size: 14px;
        }
        .student-info {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 5px;
            margin: 20px 0;
        }
        .info-row {
            display: flex;
            margin-bottom: 10px;
        }
        .info-label {
            font-weight: bold;
            width: 150px;
        }
        .info-value {
            flex: 1;
        }
        .medical-records {
            margin-top: 30px;
        }
        .record-item {
            border-left: 4px solid #4ECDC4;
            padding-left: 15px;
            margin-bottom: 20px;
            padding: 15px;
            background-color: #f9f9f9;
        }
        .record-date {
            font-weight: bold;
            color: #4ECDC4;
            margin-bottom: 10px;
        }
        .signature-section {
            margin-top: 60px;
            display: flex;
            justify-content: space-between;
        }
        .signature-box {
            width: 300px;
            text-align: center;
        }
        .signature-line {
            border-top: 2px solid #333;
            margin-top: 60px;
            padding-top: 5px;
        }
        .no-print {
            display: none;
        }
        @@media print {
            body {
                margin: 0;
            }
            .no-print {
                display: none !important;
            }
            .print-button {
                display: none !important;
            }
            @@page {
                margin: 1cm;
            }
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #4ECDC4;
            color: white;
        }
    </style>
</head>
<body>
    <div class="no-print" style="margin-bottom: 20px; text-align: right;">
        <button onclick="window.print()" class="print-button btn btn-primary" style="padding: 10px 20px; background: #4ECDC4; color: white; border: none; border-radius: 5px; cursor: pointer;">
            <i class="fas fa-print"></i> Print Report
        </button>
        <a href="@Url.Action("StudentCertificationReport", "Clinicstaff")" style="margin-left: 10px; padding: 10px 20px; background: #6c757d; color: white; text-decoration: none; border-radius: 5px;">
            <i class="fas fa-arrow-left"></i> Back to Student List
        </a>
    </div>

    <div class="report-header">
        <h1><i class="fas fa-certificate"></i> MEDICAL CERTIFICATION</h1>
        <h2>University of Cebu Medical-Dental Clinic</h2>
        <p style="color: #666; margin: 5px 0;">Sanciangko St, Cebu City</p>
        <p style="color: #666; margin: 5px 0; font-size: 12px;">Generated: @ViewData["GeneratedDate"]</p>
    </div>

    <div class="certificate-body">
        <p style="text-align: justify; margin-bottom: 30px;">
            This is to certify that <strong>@Model.FirstName @Model.LastName</strong> (ID Number: @Model.Idnumber) 
            has been examined and treated at the University of Cebu Medical-Dental Clinic. The following information 
            is provided based on the medical records available in our system.
        </p>

        <div class="student-info">
            <h3 style="margin-top: 0; color: #4ECDC4;">Student Information</h3>
            <div class="info-row">
                <span class="info-label">Full Name:</span>
                <span class="info-value">@Model.FirstName @Model.LastName</span>
            </div>
            <div class="info-row">
                <span class="info-label">ID Number:</span>
                <span class="info-value">@Model.Idnumber</span>
            </div>
            <div class="info-row">
                <span class="info-label">Email:</span>
                <span class="info-value">@Model.Email</span>
            </div>
            <div class="info-row">
                <span class="info-label">Phone Number:</span>
                <span class="info-value">@Model.PhoneNumber</span>
            </div>
            @if (Model.Birthdate.HasValue)
            {
                <div class="info-row">
                    <span class="info-label">Date of Birth:</span>
                    <span class="info-value">@Model.Birthdate.Value.ToString("MMMM dd, yyyy")</span>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Gender))
            {
                <div class="info-row">
                    <span class="info-label">Gender:</span>
                    <span class="info-value">@Model.Gender</span>
                </div>
            }
        </div>

        @if (Model.Precords != null && Model.Precords.Any())
        {
            <div class="medical-records">
                <h3 style="color: #4ECDC4; margin-top: 30px;">Medical Records</h3>
                
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Diagnosis</th>
                            <th>Medications</th>
                            <th>Allergies</th>
                            <th>Vital Signs</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model.Precords.OrderByDescending(r => r.RecordId).Take(10))
                        {
                            <tr>
                                <td>@DateTime.Now.ToString("MMM dd, yyyy")</td>
                                <td>@record.Diagnosis</td>
                                <td>@record.Medications</td>
                                <td>@(string.IsNullOrEmpty(record.Allergies) ? "None" : record.Allergies)</td>
                                <td>
                                    @if (record.BloodPressure != null) { <text>BP: @record.BloodPressure</text> }
                                    @if (record.Temperature.HasValue) { <text> | Temp: @record.Temperature°C</text> }
                                    @if (record.PulseRate.HasValue) { <text> | Pulse: @record.PulseRate bpm</text> }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="medical-records">
                <h3 style="color: #4ECDC4; margin-top: 30px;">Medical Records</h3>
                <p style="color: #999; font-style: italic;">No medical records available for this student.</p>
            </div>
        }

        @if (Model.Appointments != null && Model.Appointments.Any())
        {
            <div style="margin-top: 30px;">
                <h3 style="color: #4ECDC4;">Appointment History</h3>
                <p>Total Appointments: <strong>@Model.Appointments.Count</strong></p>
                <p>Completed Appointments: <strong>@Model.Appointments.Count(a => a.AppointmentStatus == "Completed")</strong></p>
            </div>
        }

        <div style="margin-top: 40px; padding: 20px; background-color: #f0f9ff; border-left: 4px solid #4ECDC4;">
            <p style="margin: 0; font-size: 13px; color: #666;">
                <strong>Note:</strong> This certification is based on the medical records available in the QuickClinique system 
                as of @DateTime.Now.ToString("MMMM dd, yyyy"). For any inquiries or additional information, 
                please contact the clinic directly.
            </p>
        </div>
    </div>

    <div class="signature-section">
        <div class="signature-box">
            <div class="signature-line">
                <p style="margin: 0; font-weight: bold;">Clinic Staff Signature</p>
            </div>
        </div>
        <div class="signature-box">
            <div class="signature-line">
                <p style="margin: 0; font-weight: bold;">Date</p>
            </div>
        </div>
    </div>

    <div style="margin-top: 40px; padding-top: 20px; border-top: 2px solid #ddd; text-align: center; font-size: 12px; color: #666;">
        <p>This report was generated by QuickClinique System</p>
        <p>© @DateTime.Now.Year University of Cebu Medical-Dental Clinic. All rights reserved.</p>
    </div>
</body>
</html>

