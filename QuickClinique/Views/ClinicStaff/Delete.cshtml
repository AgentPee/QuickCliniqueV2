@model QuickClinique.Models.Clinicstaff

@{
    ViewData["Title"] = "Delete Clinic Staff";
}

@section Styles {
    <link rel="stylesheet" href="~/css/StaffDelete.css" />
}

<div class="delete-staff-container">
    <div class="delete-header">
        <h2><i class="fas fa-trash-alt"></i> Delete Clinic Staff</h2>
        <p class="staff-id">Staff ID: #@Model.ClinicStaffId</p>
    </div>

    <div class="delete-content">
        <div class="warning-banner">
            <i class="fas fa-exclamation-triangle"></i>
            <h3>Are you sure you want to delete this staff member?</h3>
            <p>This action is permanent and cannot be undone.</p>
        </div>

        <div class="staff-details">
            <h4><i class="fas fa-user-circle"></i> Staff Information</h4>
            <div class="details-grid">
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-user"></i> First Name
                    </span>
                    <span class="detail-value name-first">@Html.DisplayFor(model => model.FirstName)</span>
                </div>
                
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-user"></i> Last Name
                    </span>
                    <span class="detail-value name-last">@Html.DisplayFor(model => model.LastName)</span>
                </div>
                
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-envelope"></i> Email
                    </span>
                    <span class="detail-value">@Html.DisplayFor(model => model.Email)</span>
                </div>
                
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-phone"></i> Phone Number
                    </span>
                    <span class="detail-value">@Html.DisplayFor(model => model.PhoneNumber)</span>
                </div>
                
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="fas fa-user-tag"></i> User Role
                    </span>
                    <span class="detail-value role-badge role-@Model.User?.Role?.ToLower()">
                        @Html.DisplayFor(model => model.User.Role)
                    </span>
                </div>
            </div>
        </div>

        <form asp-action="Delete" class="delete-form">
            <input type="hidden" asp-for="ClinicStaffId" />
            
            <div class="confirmation-section">
                <div class="confirmation-warning">
                    <i class="fas fa-radiation"></i>
                    <div>
                        <strong>Final Warning</strong>
                        <p>Deleting this staff member will permanently remove all their data from the system.</p>
                    </div>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-danger btn-delete">
                        <i class="fas fa-trash"></i> Delete Staff Member
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-cancel">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>