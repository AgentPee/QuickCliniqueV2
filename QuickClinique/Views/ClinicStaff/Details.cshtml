@model QuickClinique.Models.Clinicstaff

@{
    ViewData["Title"] = "Clinic Staff Details";
}

<div class="staff-details-container">
    <div class="details-header">
        <h2><i class="fas fa-user-md"></i> Clinic Staff Details</h2>
        <p class="staff-id">Staff ID: #@Model.ClinicStaffId</p>
    </div>

    <div class="details-content">
        <div class="staff-profile">
            <div class="profile-avatar">
                <i class="fas fa-user-circle"></i>
            </div>
            <div class="profile-info">
                <h3 class="staff-name">
                    <span class="first-name">@Html.DisplayFor(model => model.FirstName)</span>
                    <span class="last-name">@Html.DisplayFor(model => model.LastName)</span>
                </h3>
                <div class="role-badge role-@Model.User?.Role?.ToLower()">
                    <i class="fas fa-user-tag"></i>
                    @Html.DisplayFor(model => model.User.Role)
                </div>
            </div>
        </div>

        <div class="details-grid">
            <div class="detail-section">
                <h4><i class="fas fa-id-card"></i> Personal Information</h4>
                <div class="detail-items">
                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-user"></i> First Name
                        </span>
                        <span class="detail-value name-first">@Html.DisplayFor(model => model.FirstName)</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-user"></i> Last Name
                        </span>
                        <span class="detail-value name-last">@Html.DisplayFor(model => model.LastName)</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-envelope"></i> Email
                        </span>
                        <span class="detail-value">@Html.DisplayFor(model => model.Email)</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-phone"></i> Phone Number
                        </span>
                        <span class="detail-value">@Html.DisplayFor(model => model.PhoneNumber)</span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Gender))
                    {
                        <div class="detail-item">
                            <span class="detail-label">
                                <i class="fas fa-venus-mars"></i> Gender
                            </span>
                            <span class="detail-value">@Html.DisplayFor(model => model.Gender)</span>
                        </div>
                    }

                    @if (Model.Birthdate.HasValue)
                    {
                        <div class="detail-item">
                            <span class="detail-label">
                                <i class="fas fa-calendar"></i> Birthdate
                            </span>
                            <span class="detail-value">@Model.Birthdate.Value.ToString("MMMM dd, yyyy")</span>
                        </div>
                    }
                </div>
            </div>

            <div class="detail-section">
                <h4><i class="fas fa-key"></i> System Information</h4>
                <div class="detail-items">
                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-id-badge"></i> Staff ID
                        </span>
                        <span class="detail-value id-number">#@Html.DisplayFor(model => model.ClinicStaffId)</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-user-circle"></i> User ID
                        </span>
                        <span class="detail-value id-number">#@Html.DisplayFor(model => model.UserId)</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-user-tag"></i> User Role
                        </span>
                        <span class="detail-value">
                            <span class="role-badge role-@Model.User?.Role?.ToLower()">
                                @Html.DisplayFor(model => model.User.Role)
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        @{
            // Parse ID images (comma-separated: front, back)
            string? idFrontImage = null;
            string? idBackImage = null;
            if (!string.IsNullOrEmpty(Model.Image))
            {
                var imagePaths = Model.Image.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
                if (imagePaths.Length > 0)
                {
                    idFrontImage = imagePaths[0];
                }
                if (imagePaths.Length > 1)
                {
                    idBackImage = imagePaths[1];
                }
            }
        }

        <!-- ID Documents Section -->
        <div class="documents-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="fas fa-id-card"></i>
                    Identification Documents
                </h3>
            </div>

            <div class="documents-grid">
                <!-- ID Front -->
                <div class="document-card">
                    <div class="document-header">
                        <h4 class="document-title">
                            <i class="fas fa-id-card"></i> ID Front
                        </h4>
                    </div>
                    <div class="document-content">
                        @if (!string.IsNullOrEmpty(idFrontImage))
                        {
                            <div class="insurance-receipt-container">
                                <div class="current-file">
                                    <p><strong>Current ID Front:</strong></p>
                                    <img src="@idFrontImage" alt="ID Front" class="preview-image" />
                                    <a href="@idFrontImage" target="_blank" class="btn btn-sm btn-secondary mt-2">
                                        <i class="fas fa-external-link-alt"></i> View Full Size
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="document-placeholder">
                                <i class="fas fa-image"></i>
                                <p>No ID Front image available</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- ID Back -->
                <div class="document-card">
                    <div class="document-header">
                        <h4 class="document-title">
                            <i class="fas fa-id-card"></i> ID Back
                        </h4>
                    </div>
                    <div class="document-content">
                        @if (!string.IsNullOrEmpty(idBackImage))
                        {
                            <div class="insurance-receipt-container">
                                <div class="current-file">
                                    <p><strong>Current ID Back:</strong></p>
                                    <img src="@idBackImage" alt="ID Back" class="preview-image" />
                                    <a href="@idBackImage" target="_blank" class="btn btn-sm btn-secondary mt-2">
                                        <i class="fas fa-external-link-alt"></i> View Full Size
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="document-placeholder">
                                <i class="fas fa-image"></i>
                                <p>No ID Back image available</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <a asp-action="Edit" asp-route-id="@Model.ClinicStaffId" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit Staff
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<!-- Emergency SOS Modal for Clinic Staff -->
<div class="modal fade" id="emergencyModal" tabindex="-1" aria-labelledby="emergencyModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content emergency-modal-content">
            <div class="modal-header emergency-header">
                <h5 class="modal-title" id="emergencyModalLabel">
                    <i class="fas fa-exclamation-triangle"></i> 🚨 EMERGENCY SOS ALERT 🚨
                </h5>
            </div>
            <div class="modal-body emergency-body">
                <div class="alert alert-danger emergency-alert">
                    <i class="fas fa-bell"></i> <strong>URGENT:</strong> A student has sent an emergency SOS request!
                </div>

                <div class="emergency-info">
                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-user"></i> Student Name:
                        </div>
                        <div class="info-value" id="emergencyStudentName"></div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-id-card"></i> Student ID:
                        </div>
                        <div class="info-value" id="emergencyStudentId"></div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-map-marker-alt"></i> Location:
                        </div>
                        <div class="info-value" id="emergencyLocation"></div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-tools"></i> Needs:
                        </div>
                        <div class="info-value" id="emergencyNeeds"></div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-clock"></i> Time:
                        </div>
                        <div class="info-value" id="emergencyTime"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer emergency-footer">
                <button type="button" class="btn btn-success" id="resolveEmergencyBtn">
                    <i class="fas fa-check"></i> Mark as Resolved
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/StaffDetails.css" />
    <link rel="stylesheet" href="~/css/dashboard-index.css" asp-append-version="true" />
}

@section Scripts {
    <script>
        // ===== EMERGENCY SOS FUNCTIONALITY =====
        let currentEmergencyId = null;
        let emergencyCheckInterval = null;
        let lastCheckedEmergencyId = null;

        // Check for emergencies every 5 seconds
        function startEmergencyCheck() {
            if (emergencyCheckInterval) {
                clearInterval(emergencyCheckInterval);
            }

            emergencyCheckInterval = setInterval(async () => {
                await checkForEmergencies();
            }, 5000); // Check every 5 seconds

            // Check immediately on page load
            checkForEmergencies();
        }

        // Check for active emergencies
        async function checkForEmergencies() {
            try {
                const response = await fetch('/Dashboard/GetActiveEmergencies');
                const result = await response.json();

                if (result.success && result.data && result.data.length > 0) {
                    // Get the most recent emergency
                    const latestEmergency = result.data[0];
                    
                    // Only show modal if it's a new emergency (different ID)
                    if (latestEmergency.emergencyId !== lastCheckedEmergencyId) {
                        lastCheckedEmergencyId = latestEmergency.emergencyId;
                        currentEmergencyId = latestEmergency.emergencyId;
                        showEmergencyModal(latestEmergency);
                    }
                }
            } catch (error) {
                console.error('Error checking for emergencies:', error);
            }
        }

        // Show emergency modal
        function showEmergencyModal(emergency) {
            document.getElementById('emergencyStudentName').textContent = emergency.studentName;
            document.getElementById('emergencyStudentId').textContent = emergency.studentIdNumber;
            document.getElementById('emergencyLocation').textContent = emergency.location;
            document.getElementById('emergencyNeeds').textContent = emergency.needs;
            
            const createdAt = new Date(emergency.createdAt);
            document.getElementById('emergencyTime').textContent = createdAt.toLocaleString('en-US', {
                month: 'short',
                day: 'numeric',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });

            // Show modal with sound alert (if browser allows)
            const modal = new bootstrap.Modal(document.getElementById('emergencyModal'));
            modal.show();

            // Play alert sound (if available)
            try {
                const audio = new Audio('data:audio/wav;base64,UklGRnoGAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQoGAACBhYqFbF1fdJivrJBhNjVgodDbq2EcBj+a2/LDciUFLIHO8tiJNwgZaLvt559NEAxQp+PwtmMcBjiR1/LMeSwFJHfH8N2QQQ');
                audio.play().catch(() => {}); // Ignore if autoplay is blocked
            } catch (e) {}

            // Flash the browser tab title
            let flashCount = 0;
            const originalTitle = document.title;
            const flashInterval = setInterval(() => {
                document.title = flashCount % 2 === 0 ? '🚨 EMERGENCY SOS 🚨' : originalTitle;
                flashCount++;
                if (flashCount > 10) {
                    clearInterval(flashInterval);
                    document.title = originalTitle;
                }
            }, 500);
        }

        // Mark emergency as resolved
        document.addEventListener('DOMContentLoaded', function() {
            const resolveBtn = document.getElementById('resolveEmergencyBtn');
            if (resolveBtn) {
                resolveBtn.addEventListener('click', async function() {
                    if (!currentEmergencyId) {
                        return;
                    }

                    const btn = this;
                    btn.disabled = true;
                    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Resolving...';

                    try {
                        const response = await fetch('/Dashboard/MarkEmergencyResolved', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            },
                            body: JSON.stringify({ emergencyId: currentEmergencyId })
                        });

                        const result = await response.json();

                        if (result.success) {
                            const modal = bootstrap.Modal.getInstance(document.getElementById('emergencyModal'));
                            modal.hide();
                            alert('Emergency marked as resolved');
                            currentEmergencyId = null;
                        } else {
                            alert('Failed to resolve emergency: ' + (result.error || 'Unknown error'));
                        }
                    } catch (error) {
                        console.error('Error resolving emergency:', error);
                        alert('Error resolving emergency. Please try again.');
                    } finally {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-check"></i> Mark as Resolved';
                    }
                });
            }

            // Start emergency check when page loads
            startEmergencyCheck();
        });
    </script>
}