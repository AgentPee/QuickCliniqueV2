@model QuickClinique.Models.Clinicstaff

@{
    ViewData["Title"] = "Clinic Staff Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/StaffDetails.css" />
}

<div class="staff-details-container">
    <div class="details-header">
        <h2><i class="fas fa-user-md"></i> Clinic Staff Details</h2>
        <p class="staff-id">Staff ID: #@Model.ClinicStaffId</p>
    </div>

    <div class="details-content">
        <div class="staff-profile">
            <div class="profile-avatar">
                <i class="fas fa-user-circle"></i>
            </div>
            <div class="profile-info">
                <h3 class="staff-name">
                    <span class="first-name">@Html.DisplayFor(model => model.FirstName)</span>
                    <span class="last-name">@Html.DisplayFor(model => model.LastName)</span>
                </h3>
                <div class="role-badge role-@Model.User?.Role?.ToLower()">
                    <i class="fas fa-user-tag"></i>
                    @Html.DisplayFor(model => model.User.Role)
                </div>
            </div>
        </div>

        <div class="details-grid">
            <div class="detail-section">
                <h4><i class="fas fa-id-card"></i> Personal Information</h4>
                <div class="detail-items">
                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-user"></i> First Name
                        </span>
                        <span class="detail-value name-first">@Html.DisplayFor(model => model.FirstName)</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-user"></i> Last Name
                        </span>
                        <span class="detail-value name-last">@Html.DisplayFor(model => model.LastName)</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-envelope"></i> Email
                        </span>
                        <span class="detail-value">@Html.DisplayFor(model => model.Email)</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-phone"></i> Phone Number
                        </span>
                        <span class="detail-value">@Html.DisplayFor(model => model.PhoneNumber)</span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Gender))
                    {
                        <div class="detail-item">
                            <span class="detail-label">
                                <i class="fas fa-venus-mars"></i> Gender
                            </span>
                            <span class="detail-value">@Html.DisplayFor(model => model.Gender)</span>
                        </div>
                    }

                    @if (Model.Birthdate.HasValue)
                    {
                        <div class="detail-item">
                            <span class="detail-label">
                                <i class="fas fa-calendar"></i> Birthdate
                            </span>
                            <span class="detail-value">@Model.Birthdate.Value.ToString("MMMM dd, yyyy")</span>
                        </div>
                    }
                </div>
            </div>

            <div class="detail-section">
                <h4><i class="fas fa-key"></i> System Information</h4>
                <div class="detail-items">
                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-id-badge"></i> Staff ID
                        </span>
                        <span class="detail-value id-number">#@Html.DisplayFor(model => model.ClinicStaffId)</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-user-circle"></i> User ID
                        </span>
                        <span class="detail-value id-number">#@Html.DisplayFor(model => model.UserId)</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">
                            <i class="fas fa-user-tag"></i> User Role
                        </span>
                        <span class="detail-value">
                            <span class="role-badge role-@Model.User?.Role?.ToLower()">
                                @Html.DisplayFor(model => model.User.Role)
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        @{
            // Parse ID images (comma-separated: front, back)
            string? idFrontImage = null;
            string? idBackImage = null;
            if (!string.IsNullOrEmpty(Model.Image))
            {
                var imagePaths = Model.Image.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
                if (imagePaths.Length > 0)
                {
                    idFrontImage = imagePaths[0];
                }
                if (imagePaths.Length > 1)
                {
                    idBackImage = imagePaths[1];
                }
            }
        }

        <!-- ID Documents Section -->
        <div class="documents-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="fas fa-id-card"></i>
                    Identification Documents
                </h3>
            </div>

            <div class="documents-grid">
                <!-- ID Front -->
                <div class="document-card">
                    <div class="document-header">
                        <h4 class="document-title">
                            <i class="fas fa-id-card"></i> ID Front
                        </h4>
                    </div>
                    <div class="document-content">
                        @if (!string.IsNullOrEmpty(idFrontImage))
                        {
                            <div class="insurance-receipt-container">
                                <div class="current-file">
                                    <p><strong>Current ID Front:</strong></p>
                                    <img src="@idFrontImage" alt="ID Front" class="preview-image" />
                                    <a href="@idFrontImage" target="_blank" class="btn btn-sm btn-secondary mt-2">
                                        <i class="fas fa-external-link-alt"></i> View Full Size
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="document-placeholder">
                                <i class="fas fa-image"></i>
                                <p>No ID Front image available</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- ID Back -->
                <div class="document-card">
                    <div class="document-header">
                        <h4 class="document-title">
                            <i class="fas fa-id-card"></i> ID Back
                        </h4>
                    </div>
                    <div class="document-content">
                        @if (!string.IsNullOrEmpty(idBackImage))
                        {
                            <div class="insurance-receipt-container">
                                <div class="current-file">
                                    <p><strong>Current ID Back:</strong></p>
                                    <img src="@idBackImage" alt="ID Back" class="preview-image" />
                                    <a href="@idBackImage" target="_blank" class="btn btn-sm btn-secondary mt-2">
                                        <i class="fas fa-external-link-alt"></i> View Full Size
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="document-placeholder">
                                <i class="fas fa-image"></i>
                                <p>No ID Back image available</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <a asp-action="Edit" asp-route-id="@Model.ClinicStaffId" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit Staff
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>