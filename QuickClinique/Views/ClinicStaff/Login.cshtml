﻿@model QuickClinique.Models.ClinicStaffLoginViewModel
@{
    ViewData["Title"] = "Clinic Staff Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QuickClinic - Staff Login</title>
    <link rel="stylesheet" href="~/css/stafflog.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="side-panel">
            <a asp-controller="Student" asp-action="Login" class="logo" title="Switch to Student Login">
                <img src="~/img/logo.png" alt="QuickClinic Logo" class="logo-img">
            </a>
            <h1 class="clinic-name">QuickClinic</h1>
            <p class="tagline">Staff Portal - Professional Healthcare</p>
            <div class="medical-icons">
                <div class="floating-icon">💊</div>
                <div class="floating-icon">🩺</div>
                <div class="floating-icon">❤️</div>
                <div class="floating-icon">🏥</div>
                <div class="floating-icon">🔬</div>
                <div class="floating-icon">🩹</div>
            </div>
        </div>

        <div class="form-panel">
            <div class="form-container">
                <h2 class="form-title">Staff Login</h2>
                <p class="form-subtitle">Access the clinic management system</p>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="success-message">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <form class="auth-form" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="error-message"></div>

                    <div class="input-group">
                        <label asp-for="Email" class="control-label">Email Address</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" />
                        <span class="input-icon">📧</span>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="input-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />

                        <span class="toggle-password" onclick="togglePassword('Password')">👁️</span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-options">
                        <label class="checkbox-container">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <span class="checkmark"></span>
                            Remember me
                        </label>
                        <a asp-action="ForgotPassword" class="forgot-password">Forgot Password?</a>
                    </div>

                    <button type="submit" class="submit-btn">
                        <span class="btn-text">Sign In</span>
                        <span class="btn-loader"></span>
                    </button>
                </form>

                <div class="back-to-login">
                    <p>Don't have an account? <a asp-action="Register" class="back-link">Register here</a></p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/stafflog.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>