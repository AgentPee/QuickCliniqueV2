@{
    ViewData["Title"] = "Analytics & Reporting";
    Layout = "_Layout";
}

<div class="analytics-container">
    <a href="@Url.Action("Index", "Dashboard")" class="btn-back">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>

    <!-- Page Header -->
    <div class="analytics-header">
        <h1 class="analytics-title">
            <i class="fas fa-chart-bar"></i> Analytics & Reporting
        </h1>
        <p class="analytics-subtitle">Comprehensive insights into clinic operations and patient engagement</p>
    </div>

    <!-- Statistics Overview Cards -->
    <div class="stats-overview">
        <div class="overview-card">
            <div class="overview-icon">
                <i class="fas fa-calendar-check"></i>
            </div>
            <div class="overview-content">
                <div class="overview-value" id="totalAppointments">0</div>
                <div class="overview-label">Total Appointments</div>
            </div>
        </div>
        <div class="overview-card">
            <div class="overview-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="overview-content">
                <div class="overview-value" id="totalPatients">0</div>
                <div class="overview-label">Total Patients</div>
            </div>
        </div>
        <div class="overview-card">
            <div class="overview-icon">
                <i class="fas fa-times-circle"></i>
            </div>
            <div class="overview-content">
                <div class="overview-value" id="noShowRate">0%</div>
                <div class="overview-label">No-Show Rate</div>
            </div>
        </div>
        <div class="overview-card">
            <div class="overview-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="overview-content">
                <div class="overview-value" id="totalEmergencies">0</div>
                <div class="overview-label">Total Emergencies</div>
            </div>
        </div>
    </div>

    <!-- Analytics Sections -->
    <div class="analytics-grid">
        <!-- Appointment Volume Trends -->
        <div class="analytics-card">
            <div class="card-header">
                <h2>
                    <i class="fas fa-chart-line"></i> Appointment Volume Trends
                </h2>
                <select id="volumeTimeRange" class="time-range-select">
                    <option value="7">Last 7 Days</option>
                    <option value="30" selected>Last 30 Days</option>
                    <option value="90">Last 90 Days</option>
                    <option value="365">Last Year</option>
                </select>
            </div>
            <div class="card-body">
                <canvas id="appointmentVolumeChart"></canvas>
            </div>
        </div>

        <!-- Patient Demographics -->
        <div class="analytics-card">
            <div class="card-header">
                <h2>
                    <i class="fas fa-user-friends"></i> Patient Demographics
                </h2>
            </div>
            <div class="card-body">
                <div class="demographics-content">
                    <div class="demographics-chart">
                        <canvas id="ageDistributionChart"></canvas>
                    </div>
                    <div class="demographics-stats">
                        <div class="demographic-stat">
                            <span class="stat-label">Average Age</span>
                            <span class="stat-value" id="avgAge">-</span>
                        </div>
                        <div class="demographic-stat">
                            <span class="stat-label">Most Common Age Group</span>
                            <span class="stat-value" id="commonAgeGroup">-</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Visit Frequency -->
        <div class="analytics-card">
            <div class="card-header">
                <h2>
                    <i class="fas fa-redo"></i> Visit Frequency
                </h2>
            </div>
            <div class="card-body">
                <canvas id="visitFrequencyChart"></canvas>
                <div class="frequency-stats">
                    <div class="frequency-stat">
                        <span class="stat-label">Avg Visits per Patient</span>
                        <span class="stat-value" id="avgVisits">-</span>
                    </div>
                    <div class="frequency-stat">
                        <span class="stat-label">Return Patients</span>
                        <span class="stat-value" id="returnPatients">-</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- No-Show and Cancellation Statistics -->
        <div class="analytics-card">
            <div class="card-header">
                <h2>
                    <i class="fas fa-exclamation-triangle"></i> No-Show & Cancellation Statistics
                </h2>
            </div>
            <div class="card-body">
                <canvas id="noShowCancellationChart"></canvas>
                <div class="cancellation-stats">
                    <div class="cancellation-stat no-show">
                        <span class="stat-label">No-Shows</span>
                        <span class="stat-value" id="totalNoShows">0</span>
                        <span class="stat-percentage" id="noShowPercentage">0%</span>
                    </div>
                    <div class="cancellation-stat cancelled">
                        <span class="stat-label">Cancellations</span>
                        <span class="stat-value" id="totalCancellations">0</span>
                        <span class="stat-percentage" id="cancellationPercentage">0%</span>
                    </div>
                    <div class="cancellation-stat completed">
                        <span class="stat-label">Completed</span>
                        <span class="stat-value" id="totalCompleted">0</span>
                        <span class="stat-percentage" id="completedPercentage">0%</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Emergency Statistics -->
        <div class="analytics-card">
            <div class="card-header">
                <h2>
                    <i class="fas fa-ambulance"></i> Emergency Statistics
                </h2>
            </div>
            <div class="card-body">
                <canvas id="emergencyPeriodChart"></canvas>
                <div class="emergency-stats">
                    <div class="emergency-stat day">
                        <span class="stat-label">Today</span>
                        <span class="stat-value" id="emergenciesToday">0</span>
                    </div>
                    <div class="emergency-stat week">
                        <span class="stat-label">This Week</span>
                        <span class="stat-value" id="emergenciesThisWeek">0</span>
                    </div>
                    <div class="emergency-stat month">
                        <span class="stat-label">This Month</span>
                        <span class="stat-value" id="emergenciesThisMonth">0</span>
                    </div>
                    <div class="emergency-stat year">
                        <span class="stat-label">This Year</span>
                        <span class="stat-value" id="emergenciesThisYear">0</span>
                    </div>
                </div>
                <div class="emergency-trends">
                    <canvas id="emergencyTrendChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Most Common Reasons for Visit -->
        <div class="analytics-card">
            <div class="card-header">
                <h2>
                    <i class="fas fa-stethoscope"></i> Most Common Reasons for Visit
                </h2>
            </div>
            <div class="card-body">
                <canvas id="reasonsForVisitChart"></canvas>
                <div class="reasons-stats">
                    <div class="reason-stat">
                        <span class="stat-label">Most Common Reason</span>
                        <span class="stat-value" id="mostCommonReason">-</span>
                    </div>
                    <div class="reason-stat">
                        <span class="stat-label">Total Unique Reasons</span>
                        <span class="stat-value" id="totalUniqueReasons">0</span>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>

<!-- Emergency SOS Modal for Clinic Staff -->
<div class="modal fade" id="emergencyModal" tabindex="-1" aria-labelledby="emergencyModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content emergency-modal-content">
            <div class="modal-header emergency-header">
                <h5 class="modal-title" id="emergencyModalLabel">
                    <i class="fas fa-exclamation-triangle"></i> ðŸš¨ EMERGENCY SOS ALERT ðŸš¨
                </h5>
            </div>
            <div class="modal-body emergency-body">
                <div class="alert alert-danger emergency-alert">
                    <i class="fas fa-bell"></i> <strong>URGENT:</strong> A student has sent an emergency SOS request!
                </div>

                <div class="emergency-info">
                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-user"></i> Student Name:
                        </div>
                        <div class="info-value" id="emergencyStudentName"></div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-id-card"></i> Student ID:
                        </div>
                        <div class="info-value" id="emergencyStudentId"></div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-map-marker-alt"></i> Location:
                        </div>
                        <div class="info-value" id="emergencyLocation"></div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-tools"></i> Needs:
                        </div>
                        <div class="info-value" id="emergencyNeeds"></div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="fas fa-clock"></i> Time:
                        </div>
                        <div class="info-value" id="emergencyTime"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer emergency-footer">
                <button type="button" class="btn btn-success" id="resolveEmergencyBtn">
                    <i class="fas fa-check"></i> Mark as Resolved
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/analytics.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard-index.css" asp-append-version="true" />
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="~/js/analytics.js" asp-append-version="true"></script>
    <script>
        // ===== EMERGENCY SOS FUNCTIONALITY =====
        let currentEmergencyId = null;
        let emergencyCheckInterval = null;
        let lastCheckedEmergencyId = null;

        // Check for emergencies every 5 seconds
        function startEmergencyCheck() {
            if (emergencyCheckInterval) {
                clearInterval(emergencyCheckInterval);
            }

            emergencyCheckInterval = setInterval(async () => {
                await checkForEmergencies();
            }, 5000); // Check every 5 seconds

            // Check immediately on page load
            checkForEmergencies();
        }

        // Check for active emergencies
        async function checkForEmergencies() {
            try {
                const response = await fetch('/Dashboard/GetActiveEmergencies');
                const result = await response.json();

                if (result.success && result.data && result.data.length > 0) {
                    // Get the most recent emergency
                    const latestEmergency = result.data[0];
                    
                    // Only show modal if it's a new emergency (different ID)
                    if (latestEmergency.emergencyId !== lastCheckedEmergencyId) {
                        lastCheckedEmergencyId = latestEmergency.emergencyId;
                        currentEmergencyId = latestEmergency.emergencyId;
                        showEmergencyModal(latestEmergency);
                    }
                }
            } catch (error) {
                console.error('Error checking for emergencies:', error);
            }
        }

        // Show emergency modal
        function showEmergencyModal(emergency) {
            document.getElementById('emergencyStudentName').textContent = emergency.studentName;
            document.getElementById('emergencyStudentId').textContent = emergency.studentIdNumber;
            document.getElementById('emergencyLocation').textContent = emergency.location;
            document.getElementById('emergencyNeeds').textContent = emergency.needs;
            
            const createdAt = new Date(emergency.createdAt);
            document.getElementById('emergencyTime').textContent = createdAt.toLocaleString('en-US', {
                month: 'short',
                day: 'numeric',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });

            // Show modal with sound alert (if browser allows)
            const modal = new bootstrap.Modal(document.getElementById('emergencyModal'));
            modal.show();

            // Play alert sound (if available)
            try {
                const audio = new Audio('data:audio/wav;base64,UklGRnoGAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQoGAACBhYqFbF1fdJivrJBhNjVgodDbq2EcBj+a2/LDciUFLIHO8tiJNwgZaLvt559NEAxQp+PwtmMcBjiR1/LMeSwFJHfH8N2QQQ');
                audio.play().catch(() => {}); // Ignore if autoplay is blocked
            } catch (e) {}

            // Flash the browser tab title
            let flashCount = 0;
            const originalTitle = document.title;
            const flashInterval = setInterval(() => {
                document.title = flashCount % 2 === 0 ? 'ðŸš¨ EMERGENCY SOS ðŸš¨' : originalTitle;
                flashCount++;
                if (flashCount > 10) {
                    clearInterval(flashInterval);
                    document.title = originalTitle;
                }
            }, 500);
        }

        // Mark emergency as resolved
        document.addEventListener('DOMContentLoaded', function() {
            const resolveBtn = document.getElementById('resolveEmergencyBtn');
            if (resolveBtn) {
                resolveBtn.addEventListener('click', async function() {
                    if (!currentEmergencyId) {
                        return;
                    }

                    const btn = this;
                    btn.disabled = true;
                    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Resolving...';

                    try {
                        const response = await fetch('/Dashboard/MarkEmergencyResolved', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            },
                            body: JSON.stringify({ emergencyId: currentEmergencyId })
                        });

                        const result = await response.json();

                        if (result.success) {
                            const modal = bootstrap.Modal.getInstance(document.getElementById('emergencyModal'));
                            modal.hide();
                            alert('Emergency marked as resolved');
                            currentEmergencyId = null;
                        } else {
                            alert('Failed to resolve emergency: ' + (result.error || 'Unknown error'));
                        }
                    } catch (error) {
                        console.error('Error resolving emergency:', error);
                        alert('Error resolving emergency. Please try again.');
                    } finally {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-check"></i> Mark as Resolved';
                    }
                });
            }

            // Start emergency check when page loads
            startEmergencyCheck();
        });
    </script>
}

