@model IEnumerable<QuickClinique.Models.Clinicstaff>
@{
    ViewData["Title"] = "Doctors Report";
    Layout = null; // Remove layout for printing
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Doctors Report - QuickClinique</title>
    <link rel="stylesheet" href="~/css/reports-print.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            color: #333;
        }
        .report-header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 3px solid #4ECDC4;
            padding-bottom: 20px;
        }
        .report-header h1 {
            color: #4ECDC4;
            margin: 0;
            font-size: 28px;
        }
        .report-header p {
            margin: 5px 0;
            color: #666;
        }
        .report-info {
            margin-bottom: 20px;
            text-align: right;
            font-size: 12px;
            color: #666;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th {
            background-color: #4ECDC4;
            color: white;
            padding: 12px;
            text-align: left;
            font-weight: bold;
        }
        td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .status-badge {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 11px;
            font-weight: bold;
        }
        .status-active {
            background-color: #28a745;
            color: white;
        }
        .status-inactive {
            background-color: #dc3545;
            color: white;
        }
        .no-print {
            display: none;
        }
        @@media print {
            body {
                margin: 0;
            }
            .no-print {
                display: none !important;
            }
            .print-button {
                display: none !important;
            }
        }
    </style>
</head>
<body>
    <div class="no-print" style="margin-bottom: 20px; text-align: right;">
        <button onclick="window.print()" class="print-button btn btn-primary" style="padding: 10px 20px; background: #4ECDC4; color: white; border: none; border-radius: 5px; cursor: pointer;">
            <i class="fas fa-print"></i> Print Report
        </button>
        <a href="@Url.Action("Reports", "Clinicstaff")" style="margin-left: 10px; padding: 10px 20px; background: #6c757d; color: white; text-decoration: none; border-radius: 5px;">
            <i class="fas fa-arrow-left"></i> Back to Reports
        </a>
    </div>

    <div class="report-header">
        <h1><i class="fas fa-user-md"></i> Doctors Report</h1>
        <p>University of Cebu Medical-Dental Clinic</p>
        <p>Sanciangko St, Cebu City</p>
    </div>

    <div class="report-info">
        <p><strong>Generated:</strong> @ViewData["GeneratedDate"]</p>
        <p><strong>Total Staff:</strong> @Model.Count()</p>
    </div>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Role</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@index</td>
                    <td><strong>@doctor.FirstName @doctor.LastName</strong></td>
                    <td>@doctor.Email</td>
                    <td>@doctor.PhoneNumber</td>
                    <td>@(doctor.User?.Role ?? "N/A")</td>
                    <td>
                        <span class="status-badge @(doctor.IsActive ? "status-active" : "status-inactive")">
                            @(doctor.IsActive ? "Active" : "Inactive")
                        </span>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div style="text-align: center; padding: 40px; color: #999;">
            <i class="fas fa-info-circle" style="font-size: 48px;"></i>
            <p style="margin-top: 20px; font-size: 18px;">No clinic staff records found.</p>
        </div>
    }

    <div style="margin-top: 40px; padding-top: 20px; border-top: 2px solid #ddd; text-align: center; font-size: 12px; color: #666;">
        <p>This report was generated by QuickClinique System</p>
        <p>Â© @DateTime.Now.Year University of Cebu Medical-Dental Clinic. All rights reserved.</p>
    </div>

    <script>
        // Auto-print option (optional - can be removed if not needed)
        // window.onload = function() {
        //     setTimeout(function() {
        //         window.print();
        //     }, 500);
        // }
    </script>
</body>
</html>

