@model QuickClinique.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password - Clinic Staff";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password - QuickClinic</title>
    <link rel="stylesheet" href="~/css/staffResetPass.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="side-panel">
            <div class="logo">
                <img src="~/img/logo.png" alt="QuickClinic Logo" class="logo-img">
            </div>
            <h1 class="clinic-name">QuickClinic</h1>
            <p class="tagline">Staff Portal - Professional Healthcare</p>
            <div class="medical-icons">
                <div class="floating-icon">💊</div>
                <div class="floating-icon">🩺</div>
                <div class="floating-icon">❤️</div>
                <div class="floating-icon">🏥</div>
                <div class="floating-icon">🔬</div>
                <div class="floating-icon">🩹</div>
            </div>
        </div>

        <div class="form-panel">
            <div class="form-container">
                <h2 class="form-title">Reset Password</h2>
                <p class="form-subtitle">Enter your new password</p>

                <form asp-action="ResetPassword" method="post" class="auth-form">
                    <div asp-validation-summary="ModelOnly" class="error-message"></div>

                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="Email" />

                    <div class="input-group">
                        <label asp-for="Password" class="control-label">New Password</label>
                        <input asp-for="Password" class="form-control" type="password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <span class="input-icon">🔒</span>
                        <span class="toggle-password" onclick="togglePassword('Password')">👁️</span>
                    </div>

                    <div class="input-group">
                        <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <span class="input-icon">🔒</span>
                        <span class="toggle-password" onclick="togglePassword('ConfirmPassword')">👁️</span>
                    </div>

                    <button type="submit" class="submit-btn">
                        <span class="btn-text">Reset Password</span>
                        <span class="btn-loader"></span>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script src="~/js/auth.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>