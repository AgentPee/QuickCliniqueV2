<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuickClinique</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
                <div class="container-fluid">
                    @{
                        var logoLink = Url.Action("Index", "Home");

                        if (Context.Session.GetInt32("ClinicStaffId") != null)
                        {
                            logoLink = Url.Action("Dashboard", "ClinicStaff");
                        }
                    }

                    <a class="navbar-brand" href="@logoLink">
                        <img src="~/img/logo.png" alt="QuickClinic Logo" class="logo-img">
                        QuickClinique
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">

                            @if (Context.Session.GetInt32("ClinicStaffId") != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Index">
                                        <i class="fas fa-tachometer-alt"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Clinicstaff" asp-action="Index">
                                        <i class="fas fa-user-md"></i> Clinic Staff
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Schedule" asp-action="Availability">
                                        <i class="fas fa-calendar-alt"></i> Manage Schedules
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="appointmentDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-calendar-check"></i> Appointments
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="appointmentDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Appointments" asp-action="Manage">
                                                <i class="fas fa-cogs"></i> Manage Appointments
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Appointments" asp-action="Queue">
                                                <i class="fas fa-users"></i> Queue Management
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Appointments" asp-action="Index">
                                                <i class="fas fa-list"></i> View All
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Clinicstaff" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </a>
                                </li>
                            }

                            @if (Context.Session.GetInt32("StudentId") != null)
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-dark">Welcome, @Context.Session.GetString("StudentName")!</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Student" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                        <i class="fas fa-calendar-plus"></i> Book Appointment
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Student" asp-action="Profile">
                                        <i class="fas fa-user"></i> Profile
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Student" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </a>
                                </li>
                            }

                            @if (Context.Session.GetInt32("ClinicStaffId") == null && Context.Session.GetInt32("StudentId") == null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Student" asp-action="Login">Student-Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Clinicstaff" asp-action="Login">Staff-Login</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    <i class="fas fa-question-circle"></i> FAQ
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["AccessDenied"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @TempData["AccessDenied"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer" id="contact">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h4>QuickClinique</h4>
                    <p>University of Cebu Medical-Dental Clinic - Providing quality healthcare services to the UC community.</p>
                </div>
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")"><i class="fas fa-chevron-right"></i> Home</a></li>
                        @if (Context.Session.GetInt32("StudentId") != null)
                        {
                            <li><a href="@Url.Action("Dashboard", "Student")"><i class="fas fa-chevron-right"></i> Dashboard</a></li>
                            <li><a href="@Url.Action("Profile", "Student")"><i class="fas fa-chevron-right"></i> Profile</a></li>
                        }
                        @if (Context.Session.GetInt32("ClinicStaffId") != null)
                        {
                            <li><a href="@Url.Action("Index", "Dashboard")"><i class="fas fa-chevron-right"></i> Dashboard</a></li>
                            <li><a href="@Url.Action("Availability", "Schedule")"><i class="fas fa-chevron-right"></i> Schedules</a></li>
                        }
                        <li><a href="@Url.Action("Privacy", "Home")"><i class="fas fa-chevron-right"></i> FAQ</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Contact Info</h4>
                    <ul>
                        <li><i class="fas fa-map-marker-alt"></i> Sanciangko St, Cebu City</li>
                        <li><i class="fas fa-phone"></i> (032) 255-7777</li>
                        <li><i class="fas fa-envelope"></i> main.collegeregistrar@uc.edu.ph</li>
                        <li><i class="fas fa-clock"></i> Mon - Fri: 8AM - 5PM</li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 University of Cebu Medical-Dental Clinic. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/navbar-scroll.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>