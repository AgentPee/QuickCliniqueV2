@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow">
                <div class="card-body">
                    <i class="fas fa-ban text-danger" style="font-size: 4rem;"></i>
                    <h2 class="mt-3 text-danger">Access Denied</h2>
                    <p class="lead">@ViewData["ErrorMessage"]</p>

                    @if (Context.Session.GetInt32("ClinicStaffId") != null)
                    {
                        <a asp-controller="ClinicStaff" asp-action="Dashboard" class="btn btn-primary">
                            <i class="fas fa-tachometer-alt"></i> Return to Dashboard
                        </a>
                    }
                    else if (Context.Session.GetInt32("StudentId") != null)
                    {
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home"></i> Return to Home
                        </a>
                    }
                    else
                    {
                        <div class="d-grid gap-2">
                            <a asp-controller="ClinicStaff" asp-action="Login" class="btn btn-primary">
                                <i class="fas fa-user-md"></i> Staff Login
                            </a>
                            <a asp-controller="Student" asp-action="Login" class="btn btn-secondary">
                                <i class="fas fa-user-graduate"></i> Student Login
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>