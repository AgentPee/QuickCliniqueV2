<script>
    // ===== SIGNALR FOR REAL-TIME EMERGENCY NOTIFICATIONS =====
    (function() {
        let emergencyConnection = null;

        // Initialize SignalR for emergency notifications
        async function initializeEmergencySignalR() {
            try {
                emergencyConnection = new signalR.HubConnectionBuilder()
                    .withUrl("/messageHub")
                    .withAutomaticReconnect()
                    .build();

                // Listen for new emergencies in real-time
                emergencyConnection.on("NewEmergency", function (emergency) {
                    console.log('New emergency received via SignalR:', emergency);
                    if (emergency && emergency.emergencyId) {
                        const emergencyId = parseInt(emergency.emergencyId);
                        // Show modal if it's a new emergency
                        if (emergencyId !== currentEmergencyId) {
                            showEmergencyModal(emergency);
                            currentEmergencyId = emergencyId;
                            lastCheckedEmergencyId = emergencyId;
                        }
                    }
                });

                // Handle connection events
                emergencyConnection.onreconnecting(() => {
                    console.log('Emergency SignalR reconnecting...');
                });

                emergencyConnection.onreconnected(async () => {
                    console.log('Emergency SignalR reconnected');
                    // Rejoin clinic staff group
                    await emergencyConnection.invoke("JoinClinicStaffGroup").catch(err => console.error(err));
                });

                emergencyConnection.onclose(() => {
                    console.log('Emergency SignalR connection closed');
                });

                // Start connection
                await emergencyConnection.start();
                console.log('Emergency SignalR connected');

                // Join clinic staff group to receive emergency notifications
                await emergencyConnection.invoke("JoinClinicStaffGroup");
                console.log('Joined clinic staff group for emergency notifications');
            } catch (err) {
                console.error('Error starting Emergency SignalR connection:', err);
                // Fallback to polling if SignalR fails
            }
        }

        // Initialize when DOM is ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeEmergencySignalR);
        } else {
            initializeEmergencySignalR();
        }
    })();
</script>

