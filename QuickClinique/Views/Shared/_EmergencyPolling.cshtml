<script>
    // ===== EMERGENCY SOS FUNCTIONALITY =====
    (function() {
        let currentEmergencyId = null;
        let emergencyCheckInterval = null;
        let lastCheckedEmergencyId = null;
        let alertAudio = null;
        let audioInterval = null;

        // Check for emergencies every 5 seconds
        function startEmergencyCheck() {
            if (emergencyCheckInterval) {
                clearInterval(emergencyCheckInterval);
            }

            emergencyCheckInterval = setInterval(async () => {
                await checkForEmergencies();
            }, 5000); // Check every 5 seconds

            // Check immediately on page load
            checkForEmergencies();
        }

        // Check for active emergencies
        async function checkForEmergencies() {
            try {
                const response = await fetch('/Dashboard/GetActiveEmergencies');
                if (!response.ok) {
                    console.error('Failed to fetch emergencies:', response.status);
                    return;
                }
                
                const result = await response.json();
                console.log('Emergency check result:', result);

                if (result.success && result.data && result.data.length > 0) {
                    // Get the most recent emergency
                    const latestEmergency = result.data[0];
                    console.log('Latest emergency:', latestEmergency);
                    
                    // Convert to numbers for proper comparison
                    const latestId = parseInt(latestEmergency.emergencyId);
                    const lastCheckedId = lastCheckedEmergencyId ? parseInt(lastCheckedEmergencyId) : null;
                    
                    console.log('Comparing IDs - Latest:', latestId, 'Last Checked:', lastCheckedId, 'Current:', currentEmergencyId);
                    
                    // Show modal if:
                    // 1. It's a new emergency (different ID), OR
                    // 2. The modal is not currently showing (currentEmergencyId is null)
                    if (latestId !== lastCheckedId || currentEmergencyId === null) {
                        console.log('Showing emergency modal for ID:', latestId);
                        lastCheckedEmergencyId = latestId;
                        currentEmergencyId = latestId;
                        showEmergencyModal(latestEmergency);
                    }
                } else {
                    // No active emergencies - stop beeping and reset tracking
                    if (lastCheckedEmergencyId !== null) {
                        console.log('No active emergencies, resetting tracking');
                        stopEmergencyBeep();
                        lastCheckedEmergencyId = null;
                        currentEmergencyId = null;
                        
                        // Close modal if it's open
                        const modalElement = document.getElementById('emergencyModal');
                        if (modalElement) {
                            const modal = bootstrap.Modal.getInstance(modalElement);
                            if (modal) {
                                modal.hide();
                            }
                        }
                    }
                }
            } catch (error) {
                console.error('Error checking for emergencies:', error);
            }
        }

        // Show emergency modal
        function showEmergencyModal(emergency) {
            // Update modal content
            document.getElementById('emergencyStudentName').textContent = emergency.studentName || 'Unknown';
            document.getElementById('emergencyStudentId').textContent = emergency.studentIdNumber || 'N/A';
            document.getElementById('emergencyLocation').textContent = emergency.location || 'Not specified';
            document.getElementById('emergencyNeeds').textContent = emergency.needs || 'Not specified';
            
            const createdAt = emergency.createdAt ? new Date(emergency.createdAt) : new Date();
            document.getElementById('emergencyTime').textContent = createdAt.toLocaleString('en-US', {
                month: 'short',
                day: 'numeric',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });

            // Get or create modal instance
            const modalElement = document.getElementById('emergencyModal');
            if (!modalElement) {
                console.error('Emergency modal element not found');
                return;
            }

            // Ensure modal has highest z-index
            modalElement.style.zIndex = '10000';
            
            let modal = bootstrap.Modal.getInstance(modalElement);
            if (!modal) {
                modal = new bootstrap.Modal(modalElement, {
                    backdrop: 'static',
                    keyboard: false
                });
            }

            // Show modal with sound alert (if browser allows)
            modal.show();

            // Force z-index after showing (Bootstrap might override it)
            setTimeout(() => {
                modalElement.style.zIndex = '10000';
                const backdrop = document.querySelector('.modal-backdrop.show');
                if (backdrop) {
                    backdrop.style.zIndex = '9999';
                }
                const modalDialog = modalElement.querySelector('.modal-dialog');
                if (modalDialog) {
                    modalDialog.style.zIndex = '10001';
                    modalDialog.style.pointerEvents = 'auto';
                }
            }, 100);

            // Play continuous beeping alert sound
            startEmergencyBeep();

            // Flash the browser tab title
            let flashCount = 0;
            const originalTitle = document.title;
            const flashInterval = setInterval(() => {
                document.title = flashCount % 2 === 0 ? 'ðŸš¨ EMERGENCY SOS ðŸš¨' : originalTitle;
                flashCount++;
                if (flashCount > 10) {
                    clearInterval(flashInterval);
                    document.title = originalTitle;
                }
            }, 500);
        }

        // Ambulance Siren Sound - "Hi-Lo" Pattern
        let audioContext = null;
        let sirenOscillator = null;
        let sirenGainNode = null;
        let sirenInterval = null;
        let isHighTone = true;

        function startEmergencyBeep() {
            // Stop any existing sound
            stopEmergencyBeep();

            // Create ambulance siren "Hi-Lo" pattern using Web Audio API
            try {
                audioContext = new (window.AudioContext || window.webkitAudioContext)();
                
                // Create main oscillator for siren tone
                sirenOscillator = audioContext.createOscillator();
                sirenGainNode = audioContext.createGain();
                
                sirenOscillator.connect(sirenGainNode);
                sirenGainNode.connect(audioContext.destination);
                
                // Use square wave for more piercing siren sound
                sirenOscillator.type = 'square';
                
                // Set volume
                sirenGainNode.gain.setValueAtTime(0.45, audioContext.currentTime);
                
                // Start the oscillator
                sirenOscillator.start(audioContext.currentTime);
                
                // Hi-Lo pattern frequencies
                const highFreq = 1100;  // High tone (Hz) - "HIII"
                const lowFreq = 700;    // Low tone (Hz) - "LOOO"
                const toneDuration = 0.35; // Duration for each tone (350ms)
                
                // Start with high tone
                isHighTone = true;
                sirenOscillator.frequency.setValueAtTime(highFreq, audioContext.currentTime);
                
                // Function to alternate between high and low tones
                function alternateTone() {
                    if (!sirenOscillator || !audioContext) return;
                    
                    const currentTime = audioContext.currentTime;
                    
                    if (isHighTone) {
                        // Switch to low tone
                        sirenOscillator.frequency.setValueAtTime(lowFreq, currentTime);
                        isHighTone = false;
                    } else {
                        // Switch to high tone
                        sirenOscillator.frequency.setValueAtTime(highFreq, currentTime);
                        isHighTone = true;
                    }
                }
                
                // Alternate tones every toneDuration seconds
                // This creates: HIII... (350ms) -> LOOO... (350ms) -> HIII... -> LOOO...
                sirenInterval = setInterval(alternateTone, toneDuration * 1000);
                
            } catch (e) {
                console.error('Web Audio API not available:', e);
                // Fallback: Use Audio element with loop
                try {
                    const sirenData = generateHiLoTone();
                    alertAudio = new Audio(sirenData);
                    alertAudio.loop = true;
                    alertAudio.volume = 0.5;
                    alertAudio.play().catch(() => {
                        console.log('Audio autoplay blocked - siren will start on user interaction');
                    });
                } catch (err) {
                    console.error('Could not play siren sound:', err);
                }
            }
        }

        // Generate Hi-Lo siren tone pattern
        function generateHiLoTone() {
            try {
                const ctx = new (window.AudioContext || window.webkitAudioContext)();
                const sampleRate = ctx.sampleRate;
                const highFreq = 1100;
                const lowFreq = 700;
                const toneDuration = 0.35; // 350ms per tone
                const cycleDuration = toneDuration * 2; // Full cycle: high + low
                
                const numSamples = Math.floor(sampleRate * cycleDuration);
                const buffer = ctx.createBuffer(1, numSamples, sampleRate);
                const data = buffer.getChannelData(0);
                
                const highSamples = Math.floor(sampleRate * toneDuration);
                
                // Create high tone portion (HIII)
                for (let i = 0; i < highSamples; i++) {
                    const t = i / sampleRate;
                    const phase = (t * highFreq) % 1;
                    data[i] = (phase < 0.5 ? 1 : -1) * 0.45; // Square wave
                }
                
                // Create low tone portion (LOOO)
                for (let i = highSamples; i < numSamples; i++) {
                    const t = (i - highSamples) / sampleRate;
                    const phase = (t * lowFreq) % 1;
                    data[i] = (phase < 0.5 ? 1 : -1) * 0.45; // Square wave
                }
                
                // Return a simple fallback data URI
                return 'data:audio/wav;base64,UklGRnoGAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQoGAACBhYqFbF1fdJivrJBhNjVgodDbq2EcBj+a2/LDciUFLIHO8tiJNwgZaLvt559NEAxQp+PwtmMcBjiR1/LMeSwFJHfH8N2QQQ';
            } catch (e) {
                // Return a simple fallback
                return 'data:audio/wav;base64,UklGRnoGAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQoGAACBhYqFbF1fdJivrJBhNjVgodDbq2EcBj+a2/LDciUFLIHO8tiJNwgZaLvt559NEAxQp+PwtmMcBjiR1/LMeSwFJHfH8N2QQQ';
            }
        }

        // Stop the siren sound
        function stopEmergencyBeep() {
            // Clear the siren interval
            if (sirenInterval) {
                clearInterval(sirenInterval);
                sirenInterval = null;
            }
            
            // Stop Web Audio API oscillator
            if (sirenOscillator) {
                try {
                    sirenOscillator.stop();
                } catch (e) {
                    // Oscillator might already be stopped
                }
                sirenOscillator = null;
            }
            
            if (sirenGainNode) {
                try {
                    sirenGainNode.disconnect();
                } catch (e) {
                    // Already disconnected
                }
                sirenGainNode = null;
            }
            
            // Reset tone state
            isHighTone = true;
            
            // Stop Audio element fallback
            if (alertAudio) {
                if (alertAudio.pause) {
                    alertAudio.pause();
                    alertAudio.currentTime = 0;
                }
                alertAudio = null;
            }
        }

        // Initialize when DOM is ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeEmergencyPolling);
        } else {
            initializeEmergencyPolling();
        }

        function initializeEmergencyPolling() {
            // Cancel button handler
            const cancelBtn = document.getElementById('cancelEmergencyBtn');
            if (cancelBtn) {
                cancelBtn.addEventListener('click', function() {
                    stopEmergencyBeep();
                    const modal = bootstrap.Modal.getInstance(document.getElementById('emergencyModal'));
                    if (modal) {
                        modal.hide();
                    }
                    // Do NOT reset currentEmergencyId or lastCheckedEmergencyId here,
                    // so the modal can reappear if the emergency is still active.
                });
            }

            // Resolve button handler
            const resolveBtn = document.getElementById('resolveEmergencyBtn');
            if (resolveBtn) {
                resolveBtn.addEventListener('click', async function() {
                    if (!currentEmergencyId) {
                        return;
                    }

                    const btn = this;
                    btn.disabled = true;
                    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Resolving...';

                    try {
                        const response = await fetch('/Dashboard/MarkEmergencyResolved', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            },
                            body: JSON.stringify({ emergencyId: currentEmergencyId })
                        });

                        const result = await response.json();

                        if (result.success) {
                            // Stop the beeping sound
                            stopEmergencyBeep();
                            
                            const modal = bootstrap.Modal.getInstance(document.getElementById('emergencyModal'));
                            if (modal) {
                                modal.hide();
                            }
                            
                            // Show success message if showMessage function exists
                            if (typeof showMessage === 'function') {
                                showMessage('Emergency marked as resolved', 'success');
                            } else {
                                alert('Emergency marked as resolved');
                            }
                            
                            // Reset tracking so new emergencies will show
                            currentEmergencyId = null;
                            lastCheckedEmergencyId = null;
                            
                            // Reload the page after a short delay
                            setTimeout(() => {
                                window.location.reload();
                            }, 500);
                        } else {
                            const errorMsg = 'Failed to resolve emergency: ' + (result.error || 'Unknown error');
                            if (typeof showMessage === 'function') {
                                showMessage(errorMsg, 'error');
                            } else {
                                alert(errorMsg);
                            }
                        }
                    } catch (error) {
                        console.error('Error resolving emergency:', error);
                        const errorMsg = 'Error resolving emergency. Please try again.';
                        if (typeof showMessage === 'function') {
                            showMessage(errorMsg, 'error');
                        } else {
                            alert(errorMsg);
                        }
                    } finally {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-check"></i> Mark as Resolved';
                    }
                });
            }

            // Start emergency check when page loads
            startEmergencyCheck();
        }
    })();
</script>

