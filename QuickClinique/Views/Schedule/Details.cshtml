@model QuickClinique.Models.Schedule

@{
    ViewData["Title"] = "Schedule Details";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/schedDetails.css" />
}

<div class="schedule-details-container">
    <div class="details-header">
        <h2><i class="fas fa-calendar-alt"></i> Schedule Details</h2>
        <p class="schedule-id">Schedule ID: #@Model.ScheduleId</p>
    </div>

    <div class="details-content">
        <div class="row">
            <!-- Schedule Information -->
            <div class="col-md-6">
                <div class="info-card">
                    <div class="card-header">
                        <h4><i class="fas fa-info-circle"></i> Schedule Information</h4>
                    </div>
                    <div class="card-body">
                        <div class="details-grid">
                            <div class="detail-item">
                                <span class="detail-label">
                                    <i class="fas fa-id-badge"></i> Schedule ID
                                </span>
                                <span class="detail-value id-number">#@Model.ScheduleId</span>
                            </div>

                            <div class="detail-item">
                                <span class="detail-label">
                                    <i class="fas fa-calendar-day"></i> Date
                                </span>
                                <span class="detail-value">@Model.Date.ToString("yyyy-MM-dd")</span>
                            </div>

                            <div class="detail-item">
                                <span class="detail-label">
                                    <i class="fas fa-calendar-week"></i> Day
                                </span>
                                <span class="detail-value day-highlight">@Model.Date.DayOfWeek</span>
                            </div>

                            <div class="detail-item">
                                <span class="detail-label">
                                    <i class="fas fa-play-circle"></i> Start Time
                                </span>
                                <span class="detail-value time-slot">@Model.StartTime.ToString("hh\\:mm tt")</span>
                            </div>

                            <div class="detail-item">
                                <span class="detail-label">
                                    <i class="fas fa-stop-circle"></i> End Time
                                </span>
                                <span class="detail-value time-slot">@Model.EndTime.ToString("hh\\:mm tt")</span>
                            </div>

                            <div class="detail-item">
                                <span class="detail-label">
                                    <i class="fas fa-toggle-on"></i> Availability
                                </span>
                                <span class="detail-value">
                                    <span class="availability-badge @(Model.IsAvailable == "Yes" ? "available" : "unavailable")">
                                        <i class="fas @(Model.IsAvailable == "Yes" ? "fa-check" : "fa-times")"></i>
                                        @(Model.IsAvailable == "Yes" ? "Available" : "Unavailable")
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="action-buttons">
                            <a asp-action="Edit" asp-route-id="@Model.ScheduleId" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit Schedule
                            </a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-action="Availability" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>

