@model QuickClinique.Models.Schedule

@{
    ViewData["Title"] = "Delete Schedule";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>Delete Schedule</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this schedule?</h5>

                    <div class="alert alert-warning">
                        <strong>Warning:</strong> This action cannot be undone. Any appointments associated with this schedule will also be affected.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Date:</dt>
                        <dd class="col-sm-8">@Model.Date.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Time:</dt>
                        <dd class="col-sm-8">@Model.StartTime.ToString("hh\\:mm tt") - @Model.EndTime.ToString("hh\\:mm tt")</dd>

                        <dt class="col-sm-4">Availability:</dt>
                        <dd class="col-sm-8">@Model.IsAvailable</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ScheduleId" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>