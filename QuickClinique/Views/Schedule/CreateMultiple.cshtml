@model QuickClinique.Models.ScheduleBulkCreateViewModel

@{
    ViewData["Title"] = "Create Multiple Schedules";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/SchedCM.css" />
}

<div class="schedules-container">
    <div class="page-header">
        <div class="header-content">
            <h1><i class="fas fa-calendar-plus"></i> Create Multiple Schedules</h1>
            <p class="header-subtitle">Create schedules for a date range with specific days of the week.</p>
        </div>
    </div>

    <div class="create-multiple-layout">
        <div class="form-section">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-calendar-week"></i> Schedule Information</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateMultiple">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StartDate" class="control-label">Start Date</label>
                                    <input asp-for="StartDate" class="form-control" type="date" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EndDate" class="control-label">End Date</label>
                                    <input asp-for="EndDate" class="form-control" type="date" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StartTime" class="control-label">Start Time</label>
                                    <input asp-for="StartTime" class="form-control" type="time" />
                                    <span asp-validation-for="StartTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EndTime" class="control-label">End Time</label>
                                    <input asp-for="EndTime" class="form-control" type="time" />
                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="IsAvailable" class="control-label">Availability</label>
                            <select asp-for="IsAvailable" class="form-control">
                                <option value="Yes">Available</option>
                                <option value="No">Not Available</option>
                            </select>
                            <span asp-validation-for="IsAvailable" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label class="control-label">Days of Week (Optional - select none for all days)</label>
                            <div class="days-selection-buttons mb-3">
                                <button type="button" class="btn btn-sm btn-outline-primary" id="selectWeekdays">
                                    <i class="fas fa-briefcase"></i> Weekdays
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-primary" id="selectWeekend">
                                    <i class="fas fa-calendar-day"></i> Weekend
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-secondary" id="clearSelection">
                                    <i class="fas fa-times"></i> Clear
                                </button>
                            </div>
                            <div class="row">
                                @{
                                    var daysOfWeek = new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" };
                                }
                                @foreach (var day in daysOfWeek)
                                {
                                    <div class="col-md-3 col-6 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input day-checkbox" type="checkbox" name="SelectedDays" value="@day"
                                                   id="day-@day" @(Model.SelectedDays?.Contains(day) == true ? "checked" : "")>
                                            <label class="form-check-label" for="day-@day">
                                                @day
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus-circle"></i> Create Schedules
                            </button>
                            <a asp-action="CreateQuick" class="btn btn-outline-primary">
                                <i class="fas fa-bolt"></i> Quick Create
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="preview-section">
            <div class="card preview-card sticky-preview">
                <div class="card-header">
                    <h5><i class="fas fa-eye"></i> Preview</h5>
                </div>
                <div class="card-body">
                    <p class="preview-count" id="previewText">
                        Select dates and times to see a preview of the schedules that will be created.
                    </p>
                    <div id="schedulePreview" class="preview-list"></div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Day selection buttons
        document.getElementById('selectWeekdays')?.addEventListener('click', function() {
            const weekdays = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'];
            document.querySelectorAll('.day-checkbox').forEach(checkbox => {
                checkbox.checked = weekdays.includes(checkbox.value);
            });
            updatePreview();
        });

        document.getElementById('selectWeekend')?.addEventListener('click', function() {
            const weekend = ['Saturday', 'Sunday'];
            document.querySelectorAll('.day-checkbox').forEach(checkbox => {
                checkbox.checked = weekend.includes(checkbox.value);
            });
            updatePreview();
        });

        document.getElementById('clearSelection')?.addEventListener('click', function() {
            document.querySelectorAll('.day-checkbox').forEach(checkbox => {
                checkbox.checked = false;
            });
            updatePreview();
        });

        function updatePreview() {
            const startDateInput = document.getElementById('StartDate');
            const endDateInput = document.getElementById('EndDate');
            const startTimeInput = document.getElementById('StartTime');
            const endTimeInput = document.getElementById('EndTime');

            if (!startDateInput || !endDateInput || !startTimeInput || !endTimeInput) {
                return;
            }

            const startDate = new Date(startDateInput.value);
            const endDate = new Date(endDateInput.value);
            const startTime = startTimeInput.value;
            const endTime = endTimeInput.value;

            if (!startDateInput.value || !endDateInput.value || !startTime || !endTime) {
                document.getElementById('previewText').innerHTML =
                    '<i class="fas fa-info-circle"></i> Select dates and times to see a preview.';
                document.getElementById('schedulePreview').innerHTML = '';
                return;
            }

            // Get selected days
            const selectedDays = [];
            document.querySelectorAll('input[name="SelectedDays"]:checked').forEach(checkbox => {
                selectedDays.push(checkbox.value);
            });

            // Calculate schedules
            const schedules = [];
            const currentDate = new Date(startDate);
            while (currentDate <= endDate) {
                const dayName = currentDate.toLocaleDateString('en-US', { weekday: 'long' });
                if (selectedDays.length === 0 || selectedDays.includes(dayName)) {
                    schedules.push({
                        date: currentDate.toISOString().split('T')[0],
                        day: dayName,
                        startTime: startTime,
                        endTime: endTime
                    });
                }
                currentDate.setDate(currentDate.getDate() + 1);
            }

            // Update preview
            document.getElementById('previewText').innerHTML =
                `<i class="fas fa-calendar-check"></i> Will create <strong>${schedules.length}</strong> schedule(s)`;

            let previewHtml = '<div class="preview-items">';
            schedules.slice(0, 15).forEach(schedule => {
                previewHtml += `
                    <div class="preview-item">
                        <div class="preview-item-header">
                            <span class="preview-day">${schedule.day}</span>
                            <span class="preview-date">${schedule.date}</span>
                        </div>
                        <div class="preview-time">
                            <i class="fas fa-clock"></i> ${schedule.startTime} - ${schedule.endTime}
                        </div>
                    </div>
                `;
            });

            if (schedules.length > 15) {
                previewHtml += `<div class="preview-item preview-more">
                    <i class="fas fa-ellipsis-h"></i> and ${schedules.length - 15} more schedule(s)
                </div>`;
            }

            previewHtml += '</div>';
            document.getElementById('schedulePreview').innerHTML = previewHtml;
        }

        // Add event listeners
        document.getElementById('StartDate')?.addEventListener('change', updatePreview);
        document.getElementById('EndDate')?.addEventListener('change', updatePreview);
        document.getElementById('StartTime')?.addEventListener('change', updatePreview);
        document.getElementById('EndTime')?.addEventListener('change', updatePreview);
        document.querySelectorAll('input[name="SelectedDays"]').forEach(checkbox => {
            checkbox.addEventListener('change', updatePreview);
        });

        // Initial preview
        updatePreview();

        // Match preview height to form height
        function matchHeights() {
            const formCard = document.querySelector('.form-section .card');
            const previewCard = document.querySelector('.preview-section .card');
            if (formCard && previewCard) {
                const formHeight = formCard.offsetHeight;
                previewCard.style.height = formHeight + 'px';
            }
        }

        // Call on load and resize
        matchHeights();
        window.addEventListener('resize', matchHeights);

        // Also match after a short delay to ensure content is loaded
        setTimeout(matchHeights, 100);
    </script>
}