@model IEnumerable<QuickClinique.Models.Schedule>

@{
    ViewData["Title"] = "Schedule Availability";
    Layout = "_Layout";

    var filterType = ViewBag.FilterType as string ?? "All";
    var currentFilter = ViewData["CurrentFilter"] as string ?? "All";
    var startDate = ViewData["StartDate"] as string;
    var endDate = ViewData["EndDate"] as string;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Schedule Availability</h1>
        <div class="btn-group">
            <a asp-action="Index" class="btn btn-outline-secondary">All Schedules</a>
            <a asp-action="Create" class="btn btn-primary">Create Schedule</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.TotalSchedules</h4>
                            <p class="card-text">Total Schedules</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.AvailableSchedules</h4>
                            <p class="card-text">Available Schedules</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.UnavailableSchedules</h4>
                            <p class="card-text">Unavailable Schedules</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-times-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filter Schedules</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Availability" class="row g-3">
                <div class="col-md-3">
                    <label for="status" class="form-label">Availability Status</label>
                    <select name="status" id="status" class="form-select">
                        <option value="All" selected="@(currentFilter == "All")">All Schedules</option>
                        <option value="Yes" selected="@(currentFilter == "Yes")">Available Only</option>
                        <option value="No" selected="@(currentFilter == "No")">Unavailable Only</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" name="startDate" id="startDate" class="form-control" value="@startDate" />
                </div>
                <div class="col-md-3">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" name="endDate" id="endDate" class="form-control" value="@endDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <div>
                        <button type="submit" class="btn btn-primary">Apply Filters</button>
                        <a asp-action="Availability" class="btn btn-secondary">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Quick Action Buttons -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="btn-group">
                <a asp-action="Availability" asp-route-status="All" class="btn @(currentFilter == "All" ? "btn-primary" : "btn-outline-primary")">
                    All Schedules (@ViewBag.TotalSchedules)
                </a>
                <a asp-action="Availability" asp-route-status="Yes" class="btn @(currentFilter == "Yes" ? "btn-success" : "btn-outline-success")">
                    Available (@ViewBag.AvailableSchedules)
                </a>
                <a asp-action="Availability" asp-route-status="No" class="btn @(currentFilter == "No" ? "btn-danger" : "btn-outline-danger")">
                    Unavailable (@ViewBag.UnavailableSchedules)
                </a>
            </div>
        </div>
    </div>

    <!-- Schedules Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                @(currentFilter == "All" ? "All Schedules" :
                                currentFilter == "Yes" ? "Available Schedules" : "Unavailable Schedules")
                <span class="badge bg-secondary">@Model.Count()</span>
            </h5>
            <div class="btn-group" id="bulkActions" style="display: none;">
                <button type="button" class="btn btn-success btn-sm" onclick="bulkUpdate('Yes')">
                    <i class="fas fa-check"></i> Mark as Available
                </button>
                <button type="button" class="btn btn-danger btn-sm" onclick="bulkUpdate('No')">
                    <i class="fas fa-times"></i> Mark as Unavailable
                </button>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <form id="bulkForm" method="post" asp-action="BulkUpdateAvailability">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th width="50">
                                        <input type="checkbox" id="selectAll" />
                                    </th>
                                    <th>Date</th>
                                    <th>Day</th>
                                    <th>Time Slot</th>
                                    <th>Availability</th>
                                    <th>Appointments</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="scheduleIds" value="@item.ScheduleId" class="schedule-checkbox" />
                                        </td>
                                        <td>@item.Date.ToString("yyyy-MM-dd")</td>
                                        <td>@item.Date.DayOfWeek</td>
                                        <td>@item.StartTime.ToString("hh\\:mm tt") - @item.EndTime.ToString("hh\\:mm tt")</td>
                                        <td>
                                            <span class="badge @(item.IsAvailable == "Yes" ? "bg-success" : "bg-danger")">
                                                @(item.IsAvailable == "Yes" ? "Available" : "Unavailable")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@(item.Appointments?.Count ?? 0)</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.ScheduleId" class="btn btn-info btn-sm">Details</a>
                                                <a asp-action="Edit" asp-route-id="@item.ScheduleId" class="btn btn-warning btn-sm">Edit</a>
                                                @if (item.IsAvailable == "Yes")
                                                {
                                                    <form method="post" asp-action="BulkUpdateAvailability" style="display: inline;">
                                                        <input type="hidden" name="scheduleIds" value="@item.ScheduleId" />
                                                        <input type="hidden" name="newAvailability" value="No" />
                                                        
                                                    </form>
                                                }
                                                else
                                                {
                                                    <form method="post" asp-action="BulkUpdateAvailability" style="display: inline;">
                                                        <input type="hidden" name="scheduleIds" value="@item.ScheduleId" />
                                                        <input type="hidden" name="newAvailability" value="Yes" />
                                                        
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                    <h4>No schedules found</h4>
                    <p class="text-muted">No schedules match your current filters.</p>
                    <a asp-action="Availability" class="btn btn-primary">View All Schedules</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select All functionality
        document.getElementById('selectAll').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.schedule-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
            toggleBulkActions();
        });

        // Individual checkbox change
        document.querySelectorAll('.schedule-checkbox').forEach(checkbox => {
            checkbox.addEventListener('change', toggleBulkActions);
        });

        function toggleBulkActions() {
            const checkedCount = document.querySelectorAll('.schedule-checkbox:checked').length;
            const bulkActions = document.getElementById('bulkActions');

            if (checkedCount > 0) {
                bulkActions.style.display = 'block';
            } else {
                bulkActions.style.display = 'none';
            }
        }

        function bulkUpdate(newAvailability) {
            const checkedCount = document.querySelectorAll('.schedule-checkbox:checked').length;
            const action = newAvailability === 'Yes' ? 'available' : 'unavailable';

            if (checkedCount > 0 && confirm(`Are you sure you want to mark ${checkedCount} schedule(s) as ${action}?`)) {
                const form = document.getElementById('bulkForm');
                const availabilityInput = document.createElement('input');
                availabilityInput.type = 'hidden';
                availabilityInput.name = 'newAvailability';
                availabilityInput.value = newAvailability;
                form.appendChild(availabilityInput);

                form.submit();
            }
        }

        // Auto-submit filter form when status changes
        document.getElementById('status').addEventListener('change', function() {
            this.form.submit();
        });
    </script>
}